<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="view_rmc_consolidated_report_list" model="ir.ui.view">
        <field name="name">rmc.consolidated.report.list</field>
        <field name="model">rmc.consolidated.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="customer_id"/>
                <field name="quantity_delivered"/>
                <field name="customer_provides_cement"/>
                <field name="plant_weight"/>
                <field name="customer_weight"/>
                <field name="weight_variance"/>
            </list>
        </field>
    </record>
    <record id="view_rmc_consolidated_report_form" model="ir.ui.view">
        <field name="name">rmc.consolidated.report.form</field>
        <field name="model">rmc.consolidated.report</field>
        <field name="arch" type="xml">
            <form string="Consolidated Report" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="customer_id"/>
                        </group>
                        <group>
                            <field name="concrete_grade"/>
                            <field name="customer_provides_cement"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="quantity_delivered"/>
                        </group>
                        <group>
                            <field name="plant_weight"/>
                            <field name="customer_weight"/>
                            <field name="weight_variance"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_rmc_consolidated_report_pivot" model="ir.ui.view">
        <field name="name">rmc.consolidated.report.pivot</field>
        <field name="model">rmc.consolidated.report</field>
        <field name="arch" type="xml">
            <pivot string="Consolidated Pivot" disable_linking="0">
                <field name="date" type="row"/>
                <field name="customer_id" type="col"/>
                <field name="quantity_delivered" type="measure"/>
                <field name="plant_weight" type="measure"/>
                <field name="customer_weight" type="measure"/>
                <field name="weight_variance" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="view_rmc_consolidated_report_graph" model="ir.ui.view">
        <field name="name">rmc.consolidated.report.graph</field>
        <field name="model">rmc.consolidated.report</field>
        <field name="arch" type="xml">
            <graph string="Consolidated Graph" type="bar">
                <field name="date" type="row"/>
                <field name="quantity_delivered" type="measure"/>
            </graph>
        </field>
    </record>
    <record id="view_rmc_consolidated_report_kanban" model="ir.ui.view">
        <field name="name">rmc.consolidated.report.kanban</field>
        <field name="model">rmc.consolidated.report</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" create="0" delete="0" default_group_by="customer_id">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top o_flex">
                                <strong><field name="customer_id"/></strong>
                                <span t-esc="record.date.value" class="ms-auto"/>
                            </div>
                            <div class="o_kanban_body">
                                <div>Qty Delivered: <field name="quantity_delivered"/></div>
                                <div>Plant: <field name="plant_weight"/> | Cust: <field name="customer_weight"/></div>
                                <div>Variance: <field name="weight_variance"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_rmc_consolidated_report_calendar" model="ir.ui.view">
        <field name="name">rmc.consolidated.report.calendar</field>
        <field name="model">rmc.consolidated.report</field>
        <field name="arch" type="xml">
            <calendar string="Consolidated Calendar" date_start="date" color="customer_id">
                <field name="customer_id"/>
                <field name="quantity_delivered"/>
            </calendar>
        </field>
    </record>
    <record id="action_rmc_consolidated_report" model="ir.actions.act_window">
        <field name="name">RMC Consolidated Report</field>
        <field name="res_model">rmc.consolidated.report</field>
        <field name="view_mode">list,form,pivot,graph,kanban,calendar</field>
    </record>
    
    <!-- Docket-wise Report -->
    <record id="view_rmc_docket_report_list" model="ir.ui.view">
        <field name="name">rmc.docket.report.list</field>
        <field name="model">rmc.docket.report</field>
        <field name="arch" type="xml">
            <list string="Docket-wise Report">
                <field name="docket_date"/>
                <field name="docket_number"/>
                <field name="sale_order_id"/>
                <field name="customer_id"/>
                <field name="workorder_id"/>
                <field name="helpdesk_ticket_id"/>
                <field name="subcontractor_id"/>
                <field name="product_id"/>
                <field name="quantity_ordered" sum="1"/>
                <field name="quantity_produced" sum="1"/>
                <field name="state"/>
                <field name="truck_loading_count"/>
                <field name="plant_check_count"/>
                <field name="batch_count"/>
                <field name="log_count"/>
                <field name="invoice_id"/>
                <field name="vendor_bill_count"/>
                <field name="cube_test_count"/>
            </list>
        </field>
    </record>
    <record id="view_rmc_docket_report_form" model="ir.ui.view">
        <field name="name">rmc.docket.report.form</field>
        <field name="model">rmc.docket.report</field>
        <field name="arch" type="xml">
            <form string="Docket Report" create="0" edit="0" delete="0">
                <header>
                    <button name="action_open_docket" type="object" string="Open Docket" class="btn-primary"/>
                    <button name="action_open_workorder" type="object" string="Open Workorder" class="btn-secondary" modifiers="{&quot;invisible&quot;: [[&quot;workorder_id&quot;, &quot;=&quot;, false]]}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="docket_number"/>
                            <field name="docket_date"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="customer_id"/>
                            <field name="product_id"/>
                        </group>
                    </group>
                    <group string="Counts">
                        <group>
                            <field name="truck_loading_count"/>
                            <field name="plant_check_count"/>
                        </group>
                        <group>
                            <field name="batch_count"/>
                            <field name="log_count"/>
                        </group>
                    </group>
                    <group string="Related">
                        <button name="action_open_truck_loadings" string="Truck Loadings" type="object" class="oe_link"/>
                        <button name="action_open_plant_checks" string="Plant Checks" type="object" class="oe_link"/>
                        <button name="action_open_batches" string="Batches" type="object" class="oe_link"/>
                        <button name="action_open_logs" string="Logs" type="object" class="oe_link"/>
                        <button name="action_open_invoice" string="Customer Invoice" type="object" class="oe_link" modifiers="{&quot;invisible&quot;: [[&quot;invoice_id&quot;, &quot;=&quot;, false]]}"/>
                        <button name="action_open_cube_tests" string="Cube Tests" type="object" class="oe_link"/>
                        <button name="action_open_vendor_bills" string="Vendor Bills" type="object" class="oe_link"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_rmc_docket_report_search" model="ir.ui.view">
        <field name="name">rmc.docket.report.search</field>
        <field name="model">rmc.docket.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="docket_number"/>
                <field name="customer_id"/>
                <field name="workorder_id"/>
                <field name="state"/>
                <separator/>
                <filter string="Date" name="group_docket_date" context="{'group_by':'docket_date'}"/>
                <filter string="Customer" name="group_customer_id" context="{'group_by':'customer_id'}"/>
                <filter string="State" name="group_state" context="{'group_by':'state'}"/>
            </search>
        </field>
    </record>
    <record id="view_rmc_docket_report_pivot" model="ir.ui.view">
        <field name="name">rmc.docket.report.pivot</field>
        <field name="model">rmc.docket.report</field>
        <field name="arch" type="xml">
            <pivot string="Docket Pivot" disable_linking="0">
                <field name="docket_date" type="row"/>
                <field name="customer_id" type="col"/>
                <field name="quantity_produced" type="measure"/>
                <field name="truck_loading_count" type="measure"/>
                <field name="batch_count" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="view_rmc_docket_report_graph" model="ir.ui.view">
        <field name="name">rmc.docket.report.graph</field>
        <field name="model">rmc.docket.report</field>
        <field name="arch" type="xml">
            <graph string="Docket Graph" type="bar">
                <field name="docket_date" type="row" interval="day"/>
                <field name="quantity_produced" type="measure"/>
            </graph>
        </field>
    </record>
    <record id="view_rmc_docket_report_kanban" model="ir.ui.view">
        <field name="name">rmc.docket.report.kanban</field>
        <field name="model">rmc.docket.report</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" create="0" delete="0" default_group_by="customer_id">
