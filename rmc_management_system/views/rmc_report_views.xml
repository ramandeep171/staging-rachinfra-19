                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top o_flex">
                                <strong><field name="docket_number"/></strong>
                                <span t-esc="record.docket_date.value" class="ms-auto"/>
                            </div>
                            <div>
                                <span><field name="customer_id"/></span>
                                <span class="ms-2">Qty: <field name="quantity_produced"/></span>
                            </div>
                            <div class="o_kanban_footer">
                                <span>TL: <field name="truck_loading_count"/></span>
                                <span class="ms-2">Batches: <field name="batch_count"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_rmc_docket_report_calendar" model="ir.ui.view">
