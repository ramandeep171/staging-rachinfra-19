<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rmc_operator_day_report_list" model="ir.ui.view">
        <field name="name">rmc.operator.day.report.list</field>
        <field name="model">rmc.operator.day.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="report_date"/>
                <field name="plant_id"/>
                <field name="operator_user_id"/>
                <field name="total_jobs"/>
                <field name="completed_jobs"/>
                <field name="pending_jobs"/>
                <field name="total_quantity"/>
            </list>
        </field>
    </record>

    <record id="view_rmc_operator_day_report_form" model="ir.ui.view">
        <field name="name">rmc.operator.day.report.form</field>
        <field name="model">rmc.operator.day.report</field>
        <field name="arch" type="xml">
            <form string="Operator Day Report">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="report_date"/>
                            <field name="plant_id"/>
                            <field name="operator_user_id"/>
                        </group>
                        <group>
                            <field name="total_jobs" readonly="1"/>
                            <field name="completed_jobs" readonly="1"/>
                            <field name="pending_jobs" readonly="1"/>
                            <field name="total_quantity" readonly="1"/>
                        </group>
                    </group>
                    <field name="remarks" placeholder="Summary or issues"/>
                    <field name="docket_ids" widget="many2many_tags"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rmc_operator_day_report" model="ir.actions.act_window">
        <field name="name">Operator Day Reports</field>
        <field name="res_model">rmc.operator.day.report</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_today': 1}</field>
    </record>

    <menuitem id="menu_rmc_operator_day_reports" name="Operator Day Reports" parent="menu_rmc_root" action="action_rmc_operator_day_report" sequence="140" groups="rmc_management_system.group_rmc_manager,rmc_management_system.group_rmc_user"/>
</odoo>
