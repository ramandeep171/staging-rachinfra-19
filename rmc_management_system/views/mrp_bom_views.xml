<odoo>
	<data>
<record id="mrp_bom_form_view_inherit" model="ir.ui.view">
<field name="name">mrp.bom.form.inherit</field>
<field name="model">mrp.bom</field>
<field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
<field name="arch" type="xml">
<xpath expr="//field[@name='product_tmpl_id']" position="after">
<field name="subcontractor_id"/>
<field name="plant_code"/>
</xpath>
<xpath expr="//field[@name='bom_line_ids']//list//field[@name='product_id']" position="after">
<field name="product_code"/>
</xpath>
<xpath expr="//field[@name='bom_line_ids']" position="before">
<button name="action_add_rmc_materials" type="object" string="Add RMC Materials" class="btn-primary"/>
</xpath>
</field>
</record>
<record id="mrp_bom_tree_view_inherit" model="ir.ui.view">
<field name="name">mrp.bom.tree.inherit</field>
<field name="model">mrp.bom</field>
<field name="inherit_id" ref="mrp.mrp_bom_tree_view"/>
<field name="arch" type="xml">
<xpath expr="//field[@name='product_tmpl_id']" position="after">
<field name="subcontractor_id"/>
<field name="plant_code"/>
</xpath>
</field>
</record>
<record id="mrp_bom_line_form_view_inherit" model="ir.ui.view">
<field name="name">mrp.bom.line.form.inherit</field>
<field name="model">mrp.bom.line</field>
<field name="inherit_id" ref="mrp.mrp_bom_line_view_form"/>
<field name="arch" type="xml">
<xpath expr="//field[@name='product_id']" position="after">
<field name="product_code"/>
</xpath>
</field>
</record>
	</data>
</odoo>