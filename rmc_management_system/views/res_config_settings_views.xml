<odoo>
  <record id="view_res_config_settings_rmc_reporting" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.rmc.reporting</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//app[@name='general_settings']" position="inside">
        <div class="app_settings_block" data-string="RMC Reporting" string="RMC Reporting" data-key="rmc_reporting">
          <h2>RMC Reporting</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="rmc_report_cc_emails" placeholder="cc1@example.com, cc2@example.com"/>
                <field name="rmc_report_bcc_emails" placeholder="bcc1@example.com"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="rmc_report_cc_emails" string="Default CC Emails"/>
                <label for="rmc_report_bcc_emails" string="Default BCC Emails"/>
              </div>
            </div>
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="rmc_completion_template_id"/>
                <field name="rmc_cube7_template_id"/>
                <field name="rmc_cube28_template_id"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="rmc_completion_template_id" string="Default WO Completion Template"/>
                <label for="rmc_cube7_template_id" string="Default Cube 7-Day Template"/>
                <label for="rmc_cube28_template_id" string="Default Cube 28-Day Template"/>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>