<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Field Service Task List View -->
    <record id="view_rmc_field_service_task_list" model="ir.ui.view">
        <field name="name">rmc.field.service.task.list</field>
        <field name="model">rmc.field.service.task</field>
        <field name="arch" type="xml">
            <list string="Field Service Tasks">
                <field name="ticket_id"/>
                <field name="site_check_weight"/>
                <field name="site_check_slump"/>
                <field name="loading_weight"/>
                <field name="loading_slump"/>
                <field name="status"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Field Service Task Form View -->
    <record id="view_rmc_field_service_task_form" model="ir.ui.view">
        <field name="name">rmc.field.service.task.form</field>
        <field name="model">rmc.field.service.task</field>
        <field name="arch" type="xml">
            <form string="Field Service Task">
                <header>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ticket_id" readonly="True"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Site Check Values">
                            <field name="site_check_weight"/>
                            <field name="site_check_slump"/>
                        </group>
                        <group string="Loading Values">
                            <field name="loading_weight"/>
                            <field name="loading_slump"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="status"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Field Service Task Search View -->
    <record id="view_rmc_field_service_task_search" model="ir.ui.view">
        <field name="name">rmc.field.service.task.search</field>
        <field name="model">rmc.field.service.task</field>
        <field name="arch" type="xml">
            <search string="Field Service Tasks">
                <field name="ticket_id"/>
                <filter name="active" string="Active" domain="[('active','=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active','=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action for Field Service Tasks -->
    <record id="action_rmc_field_service_task" model="ir.actions.act_window">
        <field name="name">Field Service Tasks</field>
        <field name="res_model">rmc.field.service.task</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_rmc_field_service_task_list"/>
        <field name="help">Field Service Tasks are created from Helpdesk Tickets to track quality checks at site.</field>
    </record>

    <!-- Menu Item for Field Service Tasks -->
    <menuitem id="menu_rmc_field_service_task"
              name="Field Service Tasks"
              parent="menu_rmc_root"
              action="action_rmc_field_service_task"
              sequence="15"/>
</odoo>
