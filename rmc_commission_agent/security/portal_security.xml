<odoo>
    <data>
        <record id="rule_rmc_commission_agent_portal" model="ir.rule">
            <field name="name">Commission Agent Portal Access</field>
            <field name="model_id" ref="model_rmc_commission_agent"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">['|',('partner_id','=',user.partner_id.id),('partner_id','child_of',user.partner_id.commercial_partner_id.id)]</field>
        </record>

        <record id="rule_sale_order_commission_portal" model="ir.rule">
            <field name="name">Sale Order Commission Portal Access</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">['|',('user_id','=',user.id),'|',('commission_agent_id.partner_id','=',user.partner_id.id),('commission_agent_id.partner_id','child_of',user.partner_id.commercial_partner_id.id)]</field>
        </record>

        <record id="rule_commission_voucher_portal" model="ir.rule">
            <field name="name">Commission Voucher Portal Access</field>
            <field name="model_id" ref="model_rmc_commission_voucher"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">['|',('commission_agent_id.partner_id','=',user.partner_id.id),('commission_agent_id.partner_id','child_of',user.partner_id.commercial_partner_id.id)]</field>
        </record>
    </data>
</odoo>
