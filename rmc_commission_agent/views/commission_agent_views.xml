<odoo>
    <data>
        <record id="view_rmc_commission_agent_list" model="ir.ui.view">
            <field name="name">rmc.commission.agent.list</field>
            <field name="model">rmc.commission.agent</field>
            <field name="arch" type="xml">
                <list string="Commission Agents">
                    <field name="name"/>
                    <field name="country_tag"/>
                    <field name="commission_master_id"/>
                    <field name="portal_user_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="view_rmc_commission_agent_form" model="ir.ui.view">
            <field name="name">rmc.commission.agent.form</field>
            <field name="model">rmc.commission.agent</field>
            <field name="arch" type="xml">
                <form string="Commission Agent">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id" options="{'no_create': True}"/>
                                <field name="country_tag"/>
                                <field name="commission_master_id"/>
                                <div class="alert alert-info o_horizontal_separator" colspan="2" modifiers="{'invisible': [['commission_master_suggestion_id', '=', False]]}">
                                    <span>Suggested:</span>
                                    <field name="commission_master_suggestion_id" readonly="1" options="{'no_open': True}"/>
                                </div>
                                  </group>
                                <group string="Performance Weights" colspan="2">
                                    <group>
                                        <field name="performance_volume_weight"/>
                                        <field name="performance_recovery_weight"/>
                                    </group>
                                    <group>
                                        <field name="performance_quality_weight"/>
                                        <field name="performance_feedback_weight"/>
                                    </group>
                                </group>
                          
                            <group>
                                <field name="active"/>
                                <field name="commission_sale_order_ids" readonly="1">
                                    <list string="Sales Orders" create="false" edit="false">
                                        <field name="name"/>
                                        <field name="state"/>
                                        <field name="amount_total"/>
                                    </list>
                                </field>
                            </group>
                        </group>
                    </sheet>
                    <chatter>
                        </chatter>
                </form>
            </field>
        </record>

        <record id="view_rmc_commission_agent_list_inherit_agent_type" model="ir.ui.view">
            <field name="name">rmc.commission.agent.list.agent.type</field>
            <field name="model">rmc.commission.agent</field>
            <field name="inherit_id" ref="rmc_commission_agent.view_rmc_commission_agent_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="agent_type"/>
                </xpath>
            </field>
        </record>

        <record id="view_rmc_commission_agent_form_inherit_agent_type" model="ir.ui.view">
            <field name="name">rmc.commission.agent.form.agent.type</field>
            <field name="model">rmc.commission.agent</field>
            <field name="inherit_id" ref="rmc_commission_agent.view_rmc_commission_agent_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="agent_type"/>
                </xpath>
            </field>
        </record>

        <record id="view_rmc_commission_agent_search" model="ir.ui.view">
            <field name="name">rmc.commission.agent.search</field>
            <field name="model">rmc.commission.agent</field>
            <field name="arch" type="xml">
                <search string="Commission Agents">
                    <field name="name"/>
                    <field name="agent_type"/>
                    <field name="country_tag"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_rmc_commission_agents" model="ir.actions.act_window">
            <field name="name">Commission Agents</field>
            <field name="res_model">rmc.commission.agent</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_rmc_commission_root" name="Commission" parent="sale.sale_menu_root" sequence="95"/>
        <menuitem id="menu_rmc_commission_agents" name="Agents" parent="menu_rmc_commission_root" action="action_rmc_commission_agents" sequence="10"/>
    </data>
</odoo>
