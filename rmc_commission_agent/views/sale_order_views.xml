<odoo>
    <data>
        <record id="view_order_form_inherit_rmc_commission_agent" model="ir.ui.view">
            <field name="name">sale.order.form.rmc.commission.agent</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[last()]" position="after">
                    <group string="Commission Coordination">
                        <field name="commission_agent_id" options="{'no_create_edit': True}"/>
                        <field name="commission_agent_channel_info" readonly="1"
                               modifiers="{'invisible': [['commission_agent_channel_info', '=', False]]}"/>
                        <field name="commission_master_id" options="{'no_create_edit': True}"/>
                        <div class="alert alert-info"
                             colspan="2"
                             modifiers="{'invisible': [['commission_master_suggestion_id', '=', False]]}">
                            <span>Suggested:</span>
                            <field name="commission_master_suggestion_id" readonly="1" options="{'no_open': True}"/>
                        </div>
                    </group>
                </xpath>
                <xpath expr="//sheet/notebook" position="inside">
                    <page string="Commission Details">
                        <group>
                            <group string="Financials">
                                <field name="commission_stage"/>
                                <field name="commission_amount"/>
                                <field name="commission_delivered_volume"/>
                            </group>
                            <group string="Rental &amp; Retention">
                                <field name="commission_rental_start"/>
                                <field name="commission_rental_end"/>
                                <field name="commission_equipment_reference"/>
                                <field name="commission_recovery_rate"/>
                                <field name="commission_repeat_order_count"/>
                                <field name="commission_retention_bonus_status"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
