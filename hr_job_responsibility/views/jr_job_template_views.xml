<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_jr_job_template_tree" model="ir.ui.view">
        <field name="name">jr.job.template.tree</field>
        <field name="model">jr.job.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="job_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_jr_job_template_form" model="ir.ui.view">
        <field name="name">jr.job.template.form</field>
        <field name="model">jr.job.template</field>
        <field name="arch" type="xml">
            <form string="Job Responsibility Template">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="job_id"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="summary" placeholder="Overall responsibility summary"/>
                    </group>
                    <notebook>
                        <page string="Responsibilities">
                            <field name="line_ids">
                                <list editable="bottom" default_order="sequence">
                                    <field name="sequence" widget="handle"/>
                                    <field name="sequence_display" readonly="1" string="Sr No." class="text-center"/>
                                    <field name="description"/>
                                    <field name="emphasize"/>
                                    <field name="kpi_hint"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_jr_job_template" model="ir.actions.act_window">
        <field name="name">Job Responsibility Templates</field>
        <field name="res_model">jr.job.template</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
