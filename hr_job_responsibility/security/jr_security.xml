<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="rule_jr_employee_jr_manager" model="ir.rule">
        <field name="name">JR Manager Access</field>
        <field name="model_id" ref="model_jr_employee_jr"/>
        <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="rule_jr_employee_jr_user" model="ir.rule">
        <field name="name">JR Officer Access</field>
        <field name="model_id" ref="model_jr_employee_jr"/>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="rule_jr_employee_jr_portal" model="ir.rule">
        <field name="name">JR Portal Access</field>
        <field name="model_id" ref="model_jr_employee_jr"/>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
    </record>

    <record id="rule_jr_employee_jr_line_manager" model="ir.rule">
        <field name="name">JR Line Manager Access</field>
        <field name="model_id" ref="model_jr_employee_jr_line"/>
        <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="rule_jr_employee_jr_line_user" model="ir.rule">
        <field name="name">JR Line Officer Access</field>
        <field name="model_id" ref="model_jr_employee_jr_line"/>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="rule_jr_employee_jr_line_portal" model="ir.rule">
        <field name="name">JR Line Portal Access</field>
        <field name="model_id" ref="model_jr_employee_jr_line"/>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="domain_force">[('jr_id.employee_id.user_id', '=', user.id)]</field>
    </record>
</odoo>
