<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="gear_on_rent_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.gear_on_rent</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='general_settings']" position="inside">
                <block title="Gear On Rent" name="gear_on_rent_settings">
                    <setting id="gear_silent_warehouse_setting" help="Configure the silent warehouse for RMC operations">
                        <field name="gear_silent_warehouse_id" options="{'no_create_edit': True}"/>
                    </setting>
                    <setting id="gear_cycle_runtime_threshold_setting" help="Enforce reasons on long-running cycles">
                        <field name="gear_cycle_runtime_threshold"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
