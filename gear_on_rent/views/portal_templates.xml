<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="portal_gear_on_rent_dashboard" name="My Gear On Rent">
    <t t-call="portal.portal_layout">
      <div class="o_portal_wrap">
        <div class="container">
          <div class="row">
            <div class="col-12">
              <h1 class="display-5">My Gear On Rent</h1>
              <p class="text-muted">
                Contract dashboard placeholder. Upcoming releases will surface live production and downtime metrics.
              </p>
            </div>
          </div>
          <div class="row g-3 mt-3">
            <t t-if="monthly_orders">
              <t t-foreach="monthly_orders" t-as="mwo">
                <div class="col-md-6">
                  <div class="card h-100 shadow-sm">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                          <h5 class="card-title mb-0" t-esc="mwo['name']"/>
                          <div class="small text-muted" t-if="mwo.get('start')">
                            <t t-esc="mwo['start']"/> → <t t-esc="mwo['end'] or ''"/>
                          </div>
                        </div>
                        <span class="badge bg-secondary-subtle text-secondary text-uppercase" t-esc="mwo.get('state')"/>
                      </div>
                      <div class="row small">
                        <div class="col-6 mb-2">
                          <div class="text-muted">Prime Output (m³)</div>
                          <div class="fw-semibold" t-esc="mwo['prime_output'] or 0.0"/>
                        </div>
                        <div class="col-6 mb-2">
                          <div class="text-muted">Standby (m³)</div>
                          <div class="fw-semibold" t-esc="mwo['optimized_standby'] or 0.0"/>
                        </div>
                        <div class="col-6 mb-2">
                          <div class="text-muted">NGT Relief (m³)</div>
                          <div class="fw-semibold" t-esc="mwo['ngt_relief'] or 0.0"/>
                        </div>
                        <div class="col-6 mb-2">
                          <div class="text-muted">NGT Hours</div>
                          <div class="fw-semibold" t-esc="mwo['ngt_hours'] or 0.0"/>
                        </div>
                        <div class="col-6 mb-2">
                          <div class="text-muted">LOTO Hours</div>
                          <div class="fw-semibold" t-esc="mwo['loto_hours'] or 0.0"/>
                        </div>
                        <div class="col-6 mb-2">
                          <div class="text-muted">Excess Diesel (L)</div>
                          <div class="fw-semibold" t-esc="mwo['excess_diesel'] or 0.0"/>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </t>
            </t>
            <t t-elif="orders">
              <div class="col-12">
                <div class="alert alert-info mb-0">
                  Contracts found but no monthly production data yet. Once MWOs are created, production stats will appear here.
                </div>
              </div>
            </t>
            <t t-else="">
              <div class="col-12">
                <div class="alert alert-info mb-0">
                  No Gear On Rent contracts are linked to your account yet.
                </div>
              </div>
            </t>
          </div>
        </div>
      </div>
    </t>
  </template>

  <template id="portal_user_dropdown_inherit" inherit_id="portal.user_dropdown">
    <xpath expr="//div[@id='o_logout_divider']" position="before"/>
  </template>

  <!-- Add Gear On Rent card to the standard portal home -->
  <template id="portal_my_home_inherit_gear_on_rent" inherit_id="portal.portal_my_home">
    <xpath expr="//div[@id='oe_structure_portal_my_home_2']" position="before">
      <t t-set="bp_partner" t-value="request.env.user.partner_id.commercial_partner_id"/>
      <t t-set="gor_order_count" t-value="bp_partner and request.env['sale.order'].sudo().search_count([('partner_id', 'child_of', bp_partner.id), ('x_billing_category', 'in', ['rental', 'rmc']), ('state', 'in', ['sale', 'done'])]) or 0"/>
      <t t-set="gor_monthly_count" t-value="bp_partner and request.env['gear.rmc.monthly.order'].sudo().search_count([('so_id.partner_id', 'child_of', bp_partner.id)]) or 0"/>
      <t t-set="batching_quote_count" t-value="bp_partner and request.env['sale.order'].sudo().search_count([('partner_id', 'child_of', bp_partner.id), ('x_billing_category', '=', 'plant')]) or 0"/>
      <t t-if="gor_order_count or gor_monthly_count">
        <div class="col-md-4 mt-3">
          <a t-attf-href="/my/gear-on-rent" class="card h-100 text-decoration-none border-0 shadow-sm">
            <div class="card-body d-flex flex-column">
              <div class="d-flex align-items-center mb-2">
                <span class="fa fa-industry fa-lg text-primary me-2"/>
                <h5 class="card-title mb-0">Gear On Rent</h5>
              </div>
              <p class="card-text text-muted mb-2">See your RMC monthly work orders, production, NGT/LOTO hours, and diesel overruns.</p>
              <div class="mt-auto small text-primary">View dashboard →</div>
            </div>
          </a>
        </div>
      </t>
      <t t-if="batching_quote_count">
        <div class="col-md-4 mt-3">
          <a t-attf-href="/my/batching-plant" class="card h-100 text-decoration-none border-0 shadow-sm">
            <div class="card-body d-flex flex-column">
              <div class="d-flex align-items-center mb-2">
                <span class="fa fa-industry fa-lg text-primary me-2"/>
                <h5 class="card-title mb-0">Batching Plant Quotations</h5>
              </div>
              <p class="card-text text-muted mb-2">Review and download your batching plant quotations created from the landing page.</p>
              <div class="mt-auto small text-primary">View quotations →</div>
            </div>
          </a>
        </div>
      </t>
    </xpath>
  </template>

  <template id="portal_gear_on_rent_reconciliation" name="Annual Reconciliation">
    <t t-call="portal.portal_layout">
      <div class="o_portal_wrap">
        <div class="container">
          <div class="row">
            <div class="col-12">
              <h1 class="display-6">Annual Reconciliation</h1>
              <p class="text-muted">Fiscal year MGQ vs production with bank and policy outcomes.</p>
            </div>
          </div>
          <div class="row g-3 mt-3">
            <t t-if="reconciliations">
              <t t-foreach="reconciliations" t-as="recon">
                <div class="col-md-6">
                  <div class="card h-100">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-start">
                        <div>
                          <h5 class="card-title" t-esc="recon.name"/>
                          <p class="mb-1 small text-muted" t-esc="recon.so_id.display_name"/>
                          <p class="mb-1">
                            <strong>FY:</strong>
                            <span t-esc="recon.fiscal_year_start"/> → <span t-esc="recon.fiscal_year_end"/>
                          </p>
                          <p class="mb-1">
                            <strong>Closing Bank:</strong>
                            <span t-esc="recon.bank_closing_qty"/> m³
                          </p>
                          <p class="mb-0">
                            <strong>Policy:</strong>
                            <span t-esc="recon.policy"/>
                          </p>
                        </div>
                        <div>
                          <a t-attf-href="/my/gear-on-rent/reconciliations/#{recon.id}/export" class="btn btn-sm btn-outline-primary">
                            Export FY Grid
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </t>
            </t>
            <t t-else="">
              <div class="col-12">
                <div class="alert alert-info mb-0">No annual reconciliations are available yet.</div>
              </div>
            </t>
          </div>
        </div>
      </div>
    </t>
  </template>
</odoo>
