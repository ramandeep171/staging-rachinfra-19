<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_gear_reason_tree" model="ir.ui.view">
        <field name="name">gear.reason.tree</field>
        <field name="model">gear.reason</field>
        <field name="arch" type="xml">
            <list string="Reasons">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="reason_type"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_gear_reason_form" model="ir.ui.view">
        <field name="name">gear.reason.form</field>
        <field name="model">gear.reason</field>
        <field name="arch" type="xml">
            <form string="Reason">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="reason_type"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gear_reason" model="ir.actions.act_window">
        <field name="name">Reasons</field>
        <field name="res_model">gear.reason</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Create and manage diesel overrun reasons.</p>
        </field>
    </record>

    <menuitem id="menu_gear_reason"
              name="Reasons"
              parent="gear_on_rent.menu_gear_on_rent_operations"
              action="action_gear_reason"
              sequence="30"/>
</odoo>
