                <field name="dead_total"/>
                <field name="base_prime_monthly"/>
            </list>
        </field>
    </record>

    <record id="view_gear_costing_overview_form" model="ir.ui.view">
        <field name="name">gear.costing.overview.form</field>
        <field name="model">gear.costing.overview</field>
        <field name="arch" type="xml">
            <form string="Costing Overview">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="running_total"/>
                            <field name="capex_total"/>
                            <field name="capex_monthly_depr"/>
                            <field name="dead_total"/>
                            <field name="base_prime_monthly"/>
                            <field name="base_prime_formula" readonly="1"/>
                            <field name="margin_percent"/>
                            <field name="margin_amount" readonly="1"/>
                            <field name="final_prime_rate" readonly="1"/>
                            <field name="final_prime_formula" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Running Cost Breakdown">
                            <group col="2">
                                <field name="running_power"/>
                                <field name="running_dg"/>
                                <field name="running_diesel"/>
                                <field name="running_admin"/>
                                <field name="running_interest"/>
                                <field name="running_land"/>
                                <field name="running_total" readonly="1"/>
                            </group>
                            <div class="o_form_label">Running Monthly = sum(Power + DG + Diesel + Admin + Interest + Land)</div>
                        </page>
                        <page string="CAPEX Breakdown">
                            <group col="2">
                                <field name="capex_plant_machinery"/>
                                <field name="capex_furniture"/>
                                <field name="capex_equipment"/>
                                <field name="capex_computers"/>
                                <field name="capex_total" readonly="1"/>
                                <field name="capex_monthly_depr" readonly="1"/>
                            </group>
                            <div class="o_form_label">Monthly Depreciation = CAPEX Total / Useful Life (months) from CAPEX Master.</div>
                        </page>
                        <page string="Dead Cost Breakdown">
                            <group col="2">
                                <field name="dead_factory"/>
                                <field name="dead_non_factory"/>
                                <field name="dead_total" readonly="1"/>
                            </group>
                            <div class="o_form_label">Dead Cost Total = Factory Building + Non-Factory Building.</div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

