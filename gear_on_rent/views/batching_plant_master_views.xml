    <record id="view_gear_plant_capacity_master_form" model="ir.ui.view">
        <field name="name">gear.plant.capacity.master.form</field>
        <field name="model">gear.plant.capacity.master</field>
        <field name="arch" type="xml">
            <form string="Plant Capacity">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="capacity_cum_hour"/>
                            <field name="depreciation_years"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="notes" colspan="2"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Capacity Components">
                            <group col="2">
                                <field name="component_batching_plant"/>
                                <field name="component_cement_silos"/>
                                <field name="component_fly_ash_silos"/>
                                <field name="component_aggregate_belt"/>
                                <field name="component_screw_pump"/>
                                <field name="component_ground_dust_filter"/>
                                <field name="component_batch_cabin"/>
                                <field name="component_unloading_commissioning"/>
                                <field name="component_transportation"/>
                                <field name="component_dg_set"/>
                                <field name="component_power_board"/>
                                <field name="component_electrical_system"/>
                                <field name="component_transformer"/>
                                <field name="component_electrical_panel"/>
                                <field name="component_workshop_equipment"/>
                                <field name="component_weighbridge"/>
                                <field name="component_overhead_ht_line"/>
                                <field name="component_auxiliary_dg_set"/>
                                <field name="component_mechanical_broom"/>
                                <field name="component_misc"/>
                                <field name="component_ci_weights"/>
                                <field name="component_high_pressure_water"/>
                                <field name="component_fogging_system"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

