    <record id="view_gear_costing_overview_list" model="ir.ui.view">
        <field name="name">gear.costing.overview.list</field>
        <field name="model">gear.costing.overview</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id"/>
                <field name="running_total"/>
                <field name="capex_total"/>
