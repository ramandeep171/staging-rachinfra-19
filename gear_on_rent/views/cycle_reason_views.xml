<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_gear_cycle_reason_tree" model="ir.ui.view">
        <field name="name">gear.cycle.reason.tree</field>
        <field name="model">gear.cycle.reason</field>
        <field name="arch" type="xml">
            <list string="Cycle Reasons">
                <field name="name"/>
                <field name="reason_type"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_gear_cycle_reason_form" model="ir.ui.view">
        <field name="name">gear.cycle.reason.form</field>
        <field name="model">gear.cycle.reason</field>
        <field name="arch" type="xml">
            <form string="Cycle Reason">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="reason_type"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gear_cycle_reason" model="ir.actions.act_window">
        <field name="name">Cycle Reasons</field>
        <field name="res_model">gear.cycle.reason</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_gear_cycle_reasons"
              name="Cycle Reasons"
              parent="gear_on_rent.menu_gear_on_rent_operations"
              action="action_gear_cycle_reason"
              sequence="30"/>
</odoo>
