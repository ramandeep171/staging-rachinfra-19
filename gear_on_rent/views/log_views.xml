<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- NGT Request Views -->
    <record id="view_gear_ngt_request_list" model="ir.ui.view">
        <field name="name">gear.ngt.request.list</field>
        <field name="model">gear.ngt.request</field>
        <field name="arch" type="xml">
            <list string="NGT Requests">
                <field name="name"/>
                <field name="so_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="hours_total"/>
                <field name="electricity_expense"/>
                <field name="total_expense"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_gear_ngt_request_form" model="ir.ui.view">
        <field name="name">gear.ngt.request.form</field>
        <field name="model">gear.ngt.request</field>
        <field name="arch" type="xml">
            <form string="NGT Request">
                <header>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft"/>
                    <button name="action_submit" type="object" string="Submit" class="btn-primary"/>
                    <button name="action_approve" type="object" string="Approve" class="btn-success" groups="gear_on_rent.group_gear_on_rent_manager"/>
                    <button name="action_reject" type="object" string="Reject" class="btn-danger" groups="gear_on_rent.group_gear_on_rent_manager"/>
                    <button name="action_print_report" type="object" string="Print Annexure" class="btn-secondary" modifiers="{'invisible': [('id', '=', False)]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_form_label"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="so_id" required="1"/>
                            <field name="date_start" required="1"/>
                            <field name="meter_reading_start"/>
                            <field name="date_end" required="1"/>
                            <field name="meter_reading_end"/>
                            <field name="hours_total" readonly="1"/>
                            <field name="ngt_hourly_prorata_factor" readonly="1" invisible="1"/>
                            <field name="ngt_hourly_rate" readonly="1"/>
                            <field name="ngt_hourly_factor_effective" readonly="1"  invisible="1"/>
                            <field name="ngt_qty" readonly="1"/>
                            <field name="mgq_monthly" readonly="1"/>
                            <field name="electricity_units" readonly="1"/>
                        </group>
                        <group>
                            <field name="employee_expense" readonly="1"/>
                            <field name="land_rent" readonly="1"/>
                            <field name="electricity_unit_rate" readonly="1"/>
                            <field name="electricity_expense" readonly="1"/>
                            <field name="total_expense" readonly="1"/>
                            <field name="approved_by" readonly="1"/>
                            <field name="approved_on" readonly="1"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="reason"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gear_ngt_request" model="ir.actions.act_window">
        <field name="name">NGT Requests</field>
        <field name="res_model">gear.ngt.request</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_state': 'draft'}</field>
    </record>

    <!-- LOTO Request Views -->
    <record id="view_gear_loto_request_list" model="ir.ui.view">
        <field name="name">gear.loto.request.list</field>
        <field name="model">gear.loto.request</field>
        <field name="arch" type="xml">
            <list string="LOTO Requests">
                <field name="name"/>
                <field name="so_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="hours_total"/>
                <field name="hours_waveoff_applied"/>
                <field name="hours_chargeable"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_gear_loto_request_form" model="ir.ui.view">
        <field name="name">gear.loto.request.form</field>
        <field name="model">gear.loto.request</field>
        <field name="arch" type="xml">
            <form string="LOTO Request">
                <header>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft"/>
                    <button name="action_submit" type="object" string="Submit" class="btn-primary"/>
                    <button name="action_approve" type="object" string="Approve" class="btn-success" groups="gear_on_rent.group_gear_on_rent_manager"/>
                    <button name="action_reject" type="object" string="Reject" class="btn-danger" groups="gear_on_rent.group_gear_on_rent_manager"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_form_label"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="so_id" required="1"/>
                            <field name="date_start" required="1"/>
                            <field name="date_end" required="1"/>
                            <field name="hours_total" readonly="1"/>
                        </group>
                        <group>
                            <field name="hours_waveoff_applied" readonly="1"/>
                            <field name="hours_chargeable" readonly="1"/>
                            <field name="approved_by" readonly="1"/>
                            <field name="approved_on" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="reason"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gear_loto_request" model="ir.actions.act_window">
        <field name="name">LOTO Requests</field>
        <field name="res_model">gear.loto.request</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_state': 'draft'}</field>
    </record>

    <!-- NGT Meter Log Views -->
    <record id="view_gear_ngt_meter_log_list" model="ir.ui.view">
        <field name="name">gear.ngt.meter.log.list</field>
        <field name="model">gear.ngt.meter.log</field>
        <field name="arch" type="xml">
            <list string="NGT Meter Logs">
                <field name="name"/>
                <field name="so_id"/>
                <field name="month"/>
                <field name="start_meter"/>
                <field name="end_meter"/>
                <field name="meter_units"/>
                <field name="electricity_unit_rate"/>
            </list>
        </field>
    </record>

    <record id="view_gear_ngt_meter_log_form" model="ir.ui.view">
        <field name="name">gear.ngt.meter.log.form</field>
        <field name="model">gear.ngt.meter.log</field>
        <field name="arch" type="xml">
            <form string="NGT Meter Log">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="so_id" required="1"/>
                            <field name="month" required="1"/>
                            <field name="start_meter"/>
                            <field name="end_meter"/>
                            <field name="meter_units" readonly="1"/>
                        </group>
                        <group>
                            <field name="electricity_unit_rate"/>
                            <field name="company_id" readonly="1"/>
                            <field name="currency_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gear_ngt_meter_log" model="ir.actions.act_window">
        <field name="name">NGT Meter Logs</field>
        <field name="res_model">gear.ngt.meter.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- RMC Docket Views -->
    <record id="view_gear_rmc_production_log_list" model="ir.ui.view">
        <field name="name">gear.rmc.docket.list</field>
        <field name="model">gear.rmc.docket</field>
        <field name="arch" type="xml">
            <list string="RMC Dockets">
                <field name="date"/>
                <field name="docket_no"/>
                <field name="so_id"/>
                <field name="production_id"/>
                <field name="workorder_id"/>
                <field name="workcenter_id"/>
                <field name="actual_loading_minutes"/>
                <field name="excess_minutes"/>
                <field name="excess_diesel_amount" sum="Total"/>
                <field name="qty_m3"/>
                <field name="runtime_minutes"/>
                <field name="idle_minutes"/>
                <field name="reason_id"/>
                <field name="cycle_reason_type"/>
                <field name="cycle_reason_id"/>
                <field name="state"/>
                <field name="source"/>
            </list>
        </field>
    </record>

    <record id="view_gear_rmc_production_log_form" model="ir.ui.view">
        <field name="name">gear.rmc.docket.form</field>
        <field name="model">gear.rmc.docket</field>
        <field name="arch" type="xml">
            <form string="RMC Docket">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="so_id" required="1"/>
                            <field name="docket_no"/>
                            <field name="state" widget="statusbar" statusbar_visible="draft,in_production,ready,dispatched,delivered,cancel"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="payload_timestamp"/>
                            <field name="source"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Production">
                            <group>
                                <group>
                                    <field name="monthly_order_id"/>
                                    <field name="production_id"/>
                                    <field name="workorder_id"/>
                                    <field name="workcenter_id"/>
                                    <field name="cycle_reason_id"/>
                                    <field name="cycle_reason_type" readonly="1"/>
                                </group>
                                <group>
                                    <field name="recipe_id"/>
                                    <field name="concrete_grade" readonly="1"/>
                                    <field name="product_id" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="quantity_ordered"/>
                                    <field name="quantity_produced"/>
                                    <field name="cumulative_quantity"/>
                                    <field name="quantity_ticket" readonly="1"/>
                                </group>
                                <group>
                                    <field name="pour_structure"/>
                                    <field name="batching_time"/>
                                    <field name="water_ratio_actual"/>
                                    <field name="slump_flow_actual"/>
                                </group>
                            </group>
                        </page>
                        <page string="Metrics">
                            <group>
                                <group>
                                    <field name="qty_m3"/>
                                    <field name="slump"/>
                                    <field name="runtime_minutes"/>
                                    <field name="idle_minutes"/>
                                    <field name="actual_loading_minutes"/>
                                    <field name="reason_id"/>
                                </group>
                                <group>
                                    <field name="standard_loading_minutes" readonly="1"/>
                                    <field name="alarm_codes" widget="json"/>
                                    <field name="diesel_burn_rate_per_hour" readonly="1"/>
                                    <field name="diesel_rate_per_litre" readonly="1"/>
                                    <field name="excess_minutes" readonly="1"/>
                                    <field name="excess_diesel_litre" readonly="1"/>
                                    <field name="excess_diesel_amount" readonly="1"/>
                                    <field name="notes" colspan="2"/>
                                </group>
                            </group>
                        </page>
                        <page string="Logistics">
                            <group>
                                <group>
                                    <field name="current_capacity"/>
                                    <field name="tm_number"/>
                                    <field name="driver_name"/>
                                </group>
                                <group>
                                    <field name="subcontractor_name"/>
                                    <field name="transport_reference"/>
                                    <field name="plant_reference"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="operator_user_id"/>
                                    <field name="operator_portal_status"/>
                                    <field name="operator_completion_time"/>
                                </group>
                                <group>
                                    <field name="operator_notes" colspan="2"/>
                                </group>
                            </group>
                        </page>
                        <page string="Recipe Lines">
                            <field name="docket_line_ids">
                                <list editable="bottom">
                                    <field name="material_name"/>
                                    <field name="material_code"/>
                                    <field name="design_qty"/>
                                    <field name="actual_qty"/>
                                    <field name="variance"/>
                                    <field name="variance_percentage"/>
                                </list>
                            </field>
                        </page>
                        <page string="Batches">
                            <field name="docket_batch_ids">
                                <list editable="bottom">
                                    <field name="batch_sequence"/>
                                    <field name="batch_code"/>
                                    <field name="quantity_ordered" sum="Total M³"/>
                                    <field name="ten_mm" sum="Σ 10mm"/>
                                    <field name="twenty_mm" sum="Σ 20mm"/>
                                    <field name="facs" sum="Σ FACS"/>
                                    <field name="water_batch" sum="Σ Water"/>
                                    <field name="flyash" sum="Σ Flyash"/>
                                    <field name="adm_plast" sum="Σ Admixture"/>
                                    <field name="waterr" sum="Σ WaterR"/>
                                </list>
                            </field>
                            <field name="batch_variance_tolerance"/>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gear_rmc_production_log" model="ir.actions.act_window">
        <field name="name">RMC Dockets</field>
        <field name="res_model">gear.rmc.docket</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_gear_rmc_manual_operation_list" model="ir.ui.view">
        <field name="name">gear.rmc.manual.operation.list</field>
        <field name="model">gear.rmc.manual.operation</field>
        <field name="arch" type="xml">
            <list string="Manual Operations" create="1" edit="1">
                <field name="docket_id" string="Docket Number"/>
                <field name="workorder_id"/>
                <field name="workcenter_id"/>
                <field name="product_id" string="Assigned Product"/>
                <field name="quantity_produced"/>
                <field name="quantity_ordered" string="Quantity Ordered (m³)"/>
                <field name="qty_m3" string="Quantity (m³)"/>
                <field name="tm_number"/>
                <field name="driver_name"/>
                <field name="operator_user_id"/>
                <field name="recipe_id"/>
                <field name="batching_time"/>
                <field name="customer_id"/>
            </list>
        </field>
    </record>

    <record id="view_gear_rmc_manual_operation_line_tree" model="ir.ui.view">
        <field name="name">gear.rmc.manual.operation.line.tree</field>
        <field name="model">gear.rmc.manual.operation.line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="material_name" readonly="1"/>
                <field name="material_code" readonly="1"/>
                <field name="design_qty"/>
                <field name="actual_qty"/>
                <field name="manual_qty"/>
                <field name="variance" readonly="1"/>
                <field name="variance_percentage" readonly="1"/>
            </list>
        </field>
    </record>

    <record id="view_gear_rmc_manual_operation_form" model="ir.ui.view">
        <field name="name">gear.rmc.manual.operation.form</field>
        <field name="model">gear.rmc.manual.operation</field>
        <field name="arch" type="xml">
            <form string="Manual Operation">
                <sheet>
                    <group>
                        <field name="docket_id" required="1" string="Docket Number"/>
                    </group>
                    <group>
                        <group>
                            <field name="workorder_id"/>
                            <field name="workcenter_id"/>
                            <field name="product_id" string="Assigned Product"/>
                            <field name="recipe_id"/>
                            <field name="recipe_display_mode" string="Recipe Mode"/>
                        </group>
                        <group>
                            <field name="quantity_produced"/>
                            <field name="quantity_ordered" string="Quantity Ordered (m³)"/>
                            <field name="qty_m3" string="Quantity (m³)"/>
                            <field name="batching_time"/>
                            <field name="date"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="tm_number"/>
                            <field name="driver_name"/>
                            <field name="operator_user_id"/>
                        </group>
                        <group>
                            <field name="customer_id"/>
                            <field name="manual_qty_total" invisible="recipe_display_mode != 'on_production'"/>
                            <field name="manual_qty_total" readonly="1" invisible="recipe_display_mode == 'on_production'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Recipe Lines">
                            <field name="manual_recipe_line_ids" invisible="recipe_display_mode != 'on_production'">
                                <list editable="bottom">
                                    <field name="material_name" readonly="1"/>
                                    <field name="material_code" readonly="1"/>
                                    <field name="design_qty" readonly="1"/>
                                    <field name="actual_qty" readonly="1"/>
                                    <field name="manual_qty"/>
                                    <field name="variance" readonly="1"/>
                                    <field name="variance_percentage" readonly="1"/>
                                </list>
                            </field>
                            <field name="manual_recipe_line_ids" invisible="recipe_display_mode != 'after_production'">
                                <list editable="bottom">
                                    <field name="material_name" readonly="1"/>
                                    <field name="material_code" readonly="1"/>
                                    <field name="design_qty"/>
                                    <field name="actual_qty"/>
                                    <field name="variance" readonly="1"/>
                                    <field name="variance_percentage" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Batches">
                            <field name="docket_batch_ids" readonly="1">
                                <list>
                                    <field name="batch_sequence"/>
                                    <field name="batch_code"/>
                                    <field name="quantity_ordered"/>
                                    <field name="ten_mm"/>
                                    <field name="twenty_mm"/>
                                    <field name="facs"/>
                                    <field name="water_batch"/>
                                    <field name="flyash"/>
                                    <field name="adm_plast"/>
                                    <field name="waterr"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gear_rmc_manual_operation" model="ir.actions.act_window">
        <field name="name">Manual Operations</field>
        <field name="res_model">gear.rmc.manual.operation</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="gear_on_rent.view_gear_rmc_manual_operation_list"/>
        <field name="domain">[('docket_id.source', '=', 'manual')]</field>
    </record>
</odoo>
