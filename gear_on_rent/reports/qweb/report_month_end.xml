<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="action_report_month_end" model="ir.actions.report">
      <field name="name">RMC Month-End Report</field>
      <field name="model">account.move</field>
      <field name="report_name">gear_on_rent.report_month_end</field>
      <field name="report_type">qweb-pdf</field>
      <field name="print_report_name">'%s Month-End' % (object.name or 'Invoice')</field>
      <field name="binding_model_id" ref="account.model_account_move"/>
    </record>

    <template id="report_month_end">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
          <t t-set="payload" t-value="doc._gear_get_month_end_payload()"/>
          <t t-call="web.external_layout">
            <div class="gor-page">
            <style>
              .gor-page{width:90%;margin:0 auto;}
              .gor-kv-table{width:100%;border-collapse:collapse;margin-bottom:12px;}
              .gor-kv-table th{padding:2px 6px;text-align:left;font-weight:600;border:none;}
              .gor-kv-table td{padding:2px 6px;text-align:right;border:none;}
              .gor-section-title{margin-top:18px;}
              .gor-metric-table{width:100%;border-collapse:collapse;margin-bottom:14px;font-size:12px;}
              .gor-metric-table th{padding:4px 6px;text-align:left;border:none;border-bottom:1px solid #bbb;}
              .gor-metric-table td{padding:4px 6px;text-align:right;border:none;border-bottom:1px solid #ddd;}
              .gor-metric-table tr:last-child th,
              .gor-metric-table tr:last-child td{border-bottom:none;}
              .gor-metric-table.gor-metric-table--left td{text-align:left;}
              .gor-metric-table.gor-metric-table--plain th,
              .gor-metric-table.gor-metric-table--plain td{border:none;}
              .gor-two-col{width:100%;margin-top:16px;display:flex;flex-wrap:wrap;gap:24px 0;}
              .gor-two-col__col{flex:1 1 50%;padding:0 12px 0 0;}
              .gor-two-col__col:last-child{padding-left:12px;padding-right:0;}
              @page{
                margin:20mm 15mm 25mm 15mm;
                @bottom-right{
                  content:element(gor-footer);
                }
              }
              .gor-inline-table{width:100%;}
              .gor-inline-table th,
              .gor-inline-table td{border:none;border-bottom:1px solid #ddd;}
              .gor-inline-table tr:last-child th,
              .gor-inline-table tr:last-child td{border-bottom:none;}
              .gor-full-table{width:100%;border-collapse:collapse;margin-top:16px;font-size:12px;}
              .gor-full-table th,
              .gor-full-table td{padding:4px 6px;border:none;border-bottom:1px solid #ddd;}
              .gor-full-table th{text-align:left;border-bottom:1px solid #bbb;}
              .gor-full-table td{text-align:right;}
              .gor-full-table tbody tr:last-child td{border-bottom:none;}
              .gor-full-table thead{display:table-header-group;}
              .gor-text-left{text-align:left;}
              .gor-text-center{text-align:center;}
              .gor-footer{position:running(gor-footer);font-size:10px;text-align:right;}
              .gor-footer-placeholder{height:12mm;}
            </style>
            
            <div class="row mb-3">
              <div class="col-7">
                <h2>Monthly Client Report</h2>
                <div style="font-size:12px; line-height:1.7;">
                  <div><strong>Invoice:</strong>
                    <span t-esc="payload.get('invoice_name')"/></div>
                  <div><strong>Contract:</strong>
                    <span t-esc="payload.get('contract_name')"/></div>
                  <div><strong>Customer:</strong>
                    <span t-esc="payload.get('customer_name')"/></div>
                </div>
              </div>
              <div class="col-5 text-end" style="text-align: right;">
                <p class="h4 mb-1" t-esc="payload.get('month_label')"/>
                <p class="lead mb-0">
                  <strong t-esc="payload.get('version_label')"/>
                </p>
              </div>
            </div>

            <!-- Production Overview - Basis Information -->
            <t t-set="ngt_list" t-value="payload.get('ngt_requests') or []"/>
            <t t-set="ngt_total_hours" t-value="sum(req.get('hours', 0.0) for req in ngt_list)"/>
            <t t-set="ngt_first_start" t-value="ngt_list and ngt_list[0].get('period_start') or ''"/>
            <t t-set="ngt_last_end" t-value="ngt_list and ngt_list[-1].get('period_end') or ''"/>
            <t t-set="prime_qty" t-value="payload.get('prime_output_qty', 0.0)"/>
            <t t-set="ngt_qty" t-value="payload.get('ngt_qty', 0.0)"/>
            <t t-set="standby_qty" t-value="payload.get('optimized_standby', 0.0)"/>
            <t t-set="total_invoice_qty" t-value="prime_qty + ngt_qty + standby_qty"/>
            <div style="margin:12px 0;border:1px solid #0b5394;border-radius:6px;padding:10px;background:#f6f8fc;">
              <div style="font-weight:700;font-size:14px;margin-bottom:6px;color:#0b5394;">
                PRODUCTION OVERVIEW - BASIS INFORMATION (<t t-esc="payload.get('month_label')"/>)
              </div>
              <table class="gor-full-table" style="font-size:11px;">
                <thead style="background:#0b5394;color:#fff;">
                  <tr>
                    <th style="width:6%;">Sr. No.</th>
                    <th style="width:32%;">Variables</th>
                    <th style="width:28%;">Calculation</th>
                    <th style="width:20%;">Quantity (m³) / Value</th>
                    <th style="width:14%;">Remarks</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>1</td>
                    <td class="gor-text-left">Inventory Mode</td>
                    <td>Input</td>
                    <td class="gor-text-left"><t t-esc="payload.get('inventory_mode') or 'N/A'"/></td>
                    <td>-</td>
                  </tr>
                  <tr>
                    <td>2</td>
                    <td class="gor-text-left">Real Warehouse</td>
                    <td>Input</td>
                    <td class="gor-text-left"><t t-esc="payload.get('real_warehouse') or 'N/A'"/></td>
                    <td>-</td>
                  </tr>
                  <tr>
                    <td>3</td>
                    <td class="gor-text-left">Net Effort Window</td>
                    <td>Time Delta Assessment</td>
                    <td><t t-esc="ngt_total_hours"/> hrs</td>
                    <td>Active production window</td>
                  </tr>
                  <tr>
                    <td>4</td>
                    <td class="gor-text-left">NGT Hours</td>
                    <td>Captured</td>
                    <td><t t-esc="payload.get('ngt_hours', 0.0)"/></td>
                    <td>-</td>
                  </tr>
                  <tr>
                    <td>5</td>
                    <td class="gor-text-left">Monthly MGQ Target</td>
                    <td>Input</td>
                    <td><t t-esc="payload.get('target_qty', 0.0)"/></td>
                    <td>Final MGQ Target</td>
                  </tr>
                  <tr>
                    <td>6</td>
                    <td class="gor-text-left">Adjusted MGQ</td>
                    <td>Adjustment</td>
                    <td><t t-esc="payload.get('adjusted_target_qty', 0.0)"/></td>
                    <td>-</td>
                  </tr>
                  <tr>
                    <td>7</td>
                    <td class="gor-text-left"><strong>Prime Output</strong></td>
                    <td><strong>As per production log</strong></td>
                    <td><strong><t t-esc="prime_qty"/></strong></td>
                    <td>-</td>
                  </tr>
                  <tr>
                    <td>8</td>
                    <td class="gor-text-left">Optimized Standby</td>
                    <td>MGQ - (Prime Output + NGT)</td>
                    <td><t t-esc="standby_qty"/></td>
                    <td>Standby balancing</td>
                  </tr>
                  <tr>
                    <td>9</td>
                    <td class="gor-text-left">NGT Relief (m³)</td>
                    <td>NGT Hours × Rate</td>
                    <td><t t-esc="ngt_qty"/></td>
                    <td>Billing quantity</td>
                  </tr>
                  <tr>
                    <td>10</td>
                    <td class="gor-text-left">Total Invoice Quantity</td>
                    <td>Prime + NGT + Standby</td>
                    <td><t t-esc="total_invoice_qty"/></td>
                    <td>Billing quantity</td>
                  </tr>
                </tbody>
              </table>
            </div>
          
            <!-- Operations Summary Card -->
            <div style="margin:10px 0;border:1px solid #0b5394;border-radius:6px;padding:10px;background:#f6f8fc;">
              <div style="font-weight:700;font-size:14px;margin-bottom:6px;color:#0b5394;">OPERATIONS SUMMARY</div>
              <table class="gor-full-table" style="font-size:11px;">
                <thead style="background:#0b5394;color:#fff;">
                  <tr>
                    <th style="width:6%;">Sr. No.</th>
                    <th style="width:44%;">Variables</th>
                    <th style="width:30%;">Value</th>
                    <th style="width:20%;">Remarks</th>
                  </tr>
                </thead>
                <tbody>
                  <tr><td>1</td><td class="gor-text-left">Monthly MGQ Target</td><td><t t-esc="payload.get('target_qty', 0.0)"/></td><td>-</td></tr>
                  <tr><td>2</td><td class="gor-text-left">Adjusted MGQ</td><td><t t-esc="payload.get('adjusted_target_qty', 0.0)"/></td><td>-</td></tr>
                  <tr><td>3</td><td class="gor-text-left">Prime Output</td><td><t t-esc="payload.get('prime_output_qty', 0.0)"/></td><td>Production + manual</td></tr>
                  <tr><td>4</td><td class="gor-text-left">NGT Hours</td><td><t t-esc="payload.get('ngt_hours', 0.0)"/></td><td>Captured</td></tr>
                  <tr><td>5</td><td class="gor-text-left">NGT Relief (m³)</td><td><t t-esc="payload.get('ngt_qty', 0.0)"/></td><td>Billing quantity</td></tr>
                  <tr><td>6</td><td class="gor-text-left">Optimized Standby</td><td><t t-esc="payload.get('optimized_standby', 0.0)"/></td><td>Standby balancing</td></tr>
                </tbody>
              </table>
            </div>

            <!-- Diesel Overrun Card -->
            <t t-if="payload.get('show_diesel')">
              <div style="margin:10px 0;border:1px solid #0b5394;border-radius:6px;padding:10px;background:#f6f8fc;">
                <div style="font-weight:700;font-size:14px;margin-bottom:6px;color:#0b5394;">DIESEL OVERRUN</div>
                  <table class="gor-full-table" style="font-size:11px;">
                    <thead style="background:#0b5394;color:#fff;">
                      <tr>
                        <th style="width:6%;">Sr. No.</th>
                        <th style="width:44%;">Variables</th>
                        <th style="width:30%;">Value</th>
                        <th style="width:20%;">Remarks</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr><td>1</td><td class="gor-text-left">Excess Diesel (L)</td><td><t t-esc="payload.get('diesel_excess_litre', 0.0)"/></td><td>-</td></tr>
                      <tr><td>2</td><td class="gor-text-left">Overrun Charges</td><td><t t-esc="payload.get('diesel_excess_amount', 0.0)"/></td><td>-</td></tr>
                    </tbody>
                  </table>
              </div>
            </t>

            <!-- Cooling Windows Card -->
            <t t-if="payload.get('show_cooling')">
              <div style="margin:10px 0;border:1px solid #0b5394;border-radius:6px;padding:10px;background:#f6f8fc;">
                <div style="font-weight:700;font-size:14px;margin-bottom:6px;color:#0b5394;">COOLING WINDOWS</div>
                  <table class="gor-full-table" style="font-size:11px;">
                    <thead style="background:#0b5394;color:#fff;">
                      <tr>
                        <th style="width:6%;">Sr. No.</th>
                        <th style="width:44%;">Variables</th>
                        <th style="width:30%;">Value</th>
                        <th style="width:20%;">Remarks</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr><td>1</td><td class="gor-text-left">Prorated MGQ</td><td><t t-esc="payload.get('cooling_totals', {}).get('target_qty', 0.0)"/></td><td>-</td></tr>
                      <tr><td>2</td><td class="gor-text-left">Prime Output (m³)</td><td><t t-esc="payload.get('cooling_totals', {}).get('prime_output_qty', 0.0)"/></td><td>-</td></tr>
                      <tr><td>3</td><td class="gor-text-left">NGT Billed (m³)</td><td><t t-esc="payload.get('cooling_totals', {}).get('ngt_m3', 0.0)"/></td><td>-</td></tr>
                    </tbody>
                  </table>
              </div>
            </t>

            <!-- Wastage & Scrap Annexure -->
            <t t-if="payload.get('show_wastage') and (payload.get('prime_output_qty', 0.0) or payload.get('allowed_wastage_qty', 0.0) or payload.get('actual_scrap_qty', 0.0) or payload.get('over_wastage_qty', 0.0) or payload.get('scrap_logs') or payload.get('manufacturing_orders'))">
              <div style="margin:10px 0;border:1px solid #0b5394;border-radius:6px;padding:10px;background:#f6f8fc;">
                <div style="font-weight:700;font-size:14px;margin-bottom:6px;color:#0b5394;">WASTAGE &amp; SCRAP ANNEXURE</div>
                <!-- Build scrap logs -->
                <t t-set="scrap_logs" t-value="payload.get('scrap_logs') or []"/>
                <t t-if="not scrap_logs">
                  <t t-set="scrap_logs" t-value="[{'date': mo.get('date_start'), 'reference': mo.get('reference'), 'reason': mo.get('reason') or 'Production scrap', 'quantity': mo.get('actual_scrap', 0.0)} for mo in (payload.get('manufacturing_orders') or []) if mo.get('actual_scrap')]"/>
                </t>
                <t t-if="not scrap_logs and payload.get('actual_scrap_qty')">
                  <t t-set="scrap_logs" t-value="[{'date': payload.get('month_label') or 'Period', 'reference': payload.get('invoice_name') or payload.get('contract_name') or 'Scrap', 'reason': 'Total scrap (no log detail)', 'quantity': payload.get('actual_scrap_qty', 0.0)}]"/>
                </t>
                <t t-set="scrap_total" t-value="sum(log.get('quantity', 0.0) for log in scrap_logs)"/>
                <t t-set="scrap_refs" t-value="', '.join([log.get('reference') for log in scrap_logs if log.get('reference')])"/>
                <t t-set="ngt_list" t-value="payload.get('ngt_requests') or []"/>
                <t t-set="ngt_refs" t-value="', '.join([r.get('name') or '' for r in ngt_list])"/>
                <t t-set="ngt_contract" t-value="ngt_list and (ngt_list[0].get('contract_name') or '')"/>
                <t t-set="ngt_mgq" t-value="ngt_list and ngt_list[0].get('mgq_monthly', 0.0) or payload.get('target_qty', 0.0)"/>
                <t t-set="detail_refs" t-value="scrap_refs or '-'"/>
                <t t-set="detail_contract" t-value="ngt_contract or payload.get('contract_name') or '-'"/>
                <!-- Detail header inline -->
                <div style="font-size:11px;margin-bottom:8px;">
                  <strong>References:</strong> <t t-esc="detail_refs"/> |
                  <strong>Contract / SO:</strong> <t t-esc="detail_contract"/> |
                  <strong>Status:</strong> Approved |
                  <strong>MGQ (Monthly):</strong> <t t-esc="ngt_mgq"/>
                </div>
                <t t-if="scrap_logs">
                  <table class="gor-full-table" style="margin-bottom:10px;font-size:11px;">
                    <thead style="display: table-header-group;">
                      <tr>
                        <th style="width:6%;">Sr.</th>
                        <th class="gor-text-left" style="width:22%;">Date</th>
                        <th class="gor-text-left" style="width:28%;">Reference</th>
                        <th class="gor-text-left" style="width:24%;">Reason</th>
                        <th style="width:20%;">Scrap Qty (m³)</th>
                      </tr>
                    </thead>
                    <tbody>
                      <t t-foreach="[(i + 1, log) for i, log in enumerate(scrap_logs)]" t-as="row">
                        <tr>
                          <td><t t-esc="row[0]"/></td>
                          <td class="gor-text-left"><t t-esc="row[1].get('date') or 'N/A'"/></td>
                          <td class="gor-text-left"><t t-esc="row[1].get('reference') or 'N/A'"/></td>
                          <td class="gor-text-left"><t t-esc="row[1].get('reason') or '-'"/></td>
                          <td><t t-esc="row[1].get('quantity', 0.0)"/></td>
                        </tr>
                      </t>
                    </tbody>
                    <tfoot>
                      <tr>
                        <th colspan="4" class="gor-text-right">TOTAL SCRAP (m³)</th>
                        <th><t t-esc="scrap_total"/></th>
                      </tr>
                    </tfoot>
                  </table>
                </t>
                <!-- Wastage summary after scrap log -->
                <table class="gor-full-table" style="font-size:11px;">
                  <thead style="background:#0b5394;color:#fff;">
                    <tr>
                      <th style="width:6%;">Sr. No.</th>
                      <th style="width:44%;">Variables</th>
                      <th style="width:30%;">Value</th>
                      <th style="width:20%;">Remarks</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr><td>1</td><td class="gor-text-left">Prime Output (m³)</td><td><t t-esc="payload.get('prime_output_qty', 0.0)"/></td><td>-</td></tr>
                    <tr><td>2</td><td class="gor-text-left">Allowed Wastage (m³)</td><td><t t-esc="payload.get('allowed_wastage_qty', 0.0)"/></td><td>-</td></tr>
                    <tr><td>3</td><td class="gor-text-left">Actual Scrap (m³)</td><td><t t-esc="payload.get('actual_scrap_qty', 0.0)"/></td><td>-</td></tr>
                    <tr><td>4</td><td class="gor-text-left">Over Wastage / Deduction (m³)</td><td><t t-esc="payload.get('over_wastage_qty', 0.0)"/></td><td>-</td></tr>
                  </tbody>
                </table>
              </div>
            </t>

            <!-- Normal Windows Card -->
            <div style="margin:10px 0;border:1px solid #0b5394;border-radius:6px;padding:10px;background:#f6f8fc;">
              <div style="font-weight:700;font-size:14px;margin-bottom:6px;color:#0b5394;">NORMAL WINDOWS</div>
              <table class="gor-full-table" style="font-size:11px;">
                <thead style="background:#0b5394;color:#fff;">
                  <tr>
                    <th style="width:6%;">Sr. No.</th>
                    <th style="width:44%;">Variables</th>
                    <th style="width:30%;">Value</th>
                    <th style="width:20%;">Remarks</th>
                  </tr>
                </thead>
                <tbody>
                  <tr><td>1</td><td class="gor-text-left">Monthly MGQ</td><td><t t-esc="payload.get('normal_totals', {}).get('target_qty', 0.0)"/></td><td>-</td></tr>
                  <tr><td>2</td><td class="gor-text-left">Prime Output (m³)</td><td><t t-esc="payload.get('normal_totals', {}).get('prime_output_qty', 0.0)"/></td><td>-</td></tr>
                  <tr><td>3</td><td class="gor-text-left">Standby (m³)</td><td><t t-esc="payload.get('normal_totals', {}).get('standby_qty', 0.0)"/></td><td>-</td></tr>
                  <tr><td>4</td><td class="gor-text-left">NGT from Approvals (m³)</td><td><t t-esc="payload.get('normal_totals', {}).get('ngt_m3', 0.0)"/></td><td>-</td></tr>
                </tbody>
              </table>
            </div>

            <!-- Prime Manual Output Breakdown -->
            <t t-if="payload.get('manual_operations')">
              <t t-set="manual_ops" t-value="payload.get('manual_operations') or []"/>
              <t t-set="manual_total" t-value="sum(op.get('quantity', 0.0) for op in manual_ops)"/>
              <t t-set="manual_total" t-value="payload.get('manual_total_qty', 0.0)"/>
              <t t-set="prime_base" t-value="payload.get('prime_output_qty', 0.0) - manual_total"/>
              <t t-set="prime_combined" t-value="payload.get('prime_output_qty', 0.0)"/>
              <div style="margin:10px 0;border:1px solid #0b5394;border-radius:6px;padding:10px;background:#f6f8fc;">
                <div style="font-weight:700;font-size:14px;margin-bottom:6px;color:#0b5394;">PRIME MANUAL OUTPUT BREAKDOWN</div>
                <table class="gor-full-table" style="font-size:11px;">
                  <thead style="background:#0b5394;color:#fff;">
                    <tr>
                      <th style="width:8%;">Sr.</th>
                      <th style="width:50%;">Description</th>
                      <th style="width:22%;">Quantity (m³)</th>
                      <th style="width:20%;">Remarks</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>1</td>
                      <td class="gor-text-left">Prime Output (system)</td>
                      <td><t t-esc="prime_base"/></td>
                      <td class="gor-text-left">Base production</td>
                    </tr>
                    <t t-foreach="[(i + 2, op) for i, op in enumerate(manual_ops)]" t-as="row">
                      <tr>
                        <td><t t-esc="row[0]"/></td>
                        <td class="gor-text-left"><t t-esc="row[1].get('description')"/></td>
                        <td><t t-esc="row[1].get('quantity', 0.0)"/></td>
                        <td class="gor-text-left"><t t-esc="row[1].get('remarks')"/></td>
                      </tr>
                    </t>
                    <t t-foreach="[(i + 1, op) for i, op in enumerate(manual_ops)]" t-as="row">
                      <t t-set="noop"/>
                    </t>
                    <tr>
                      <th class="gor-text-right" colspan="2">TOTAL PRIME MANUAL</th>
                      <th><t t-esc="manual_total"/></th>
                      <th></th>
                    </tr>
                    <tr>
                      <th class="gor-text-right" colspan="2">TOTAL PRIME OUTPUT (incl. manual)</th>
                      <th><t t-esc="prime_combined"/></th>
                      <th></th>
                    </tr>
                  </tbody>
                </table>
              </div>
            </t>

            <t t-if="payload.get('ngt_requests')">
              <div style="page-break-before:always;"/>
              <t t-set="requests" t-value="payload.get('ngt_requests') or []"/>
              <t t-if="requests">
                <t t-set="total_hours" t-value="sum(req.get('hours', 0.0) for req in requests)"/>
                <t t-set="total_qty" t-value="sum(req.get('qty', 0.0) for req in requests)"/>
                <t t-set="expense" t-value="payload.get('ngt_expense') or (requests and requests[0]) or {}"/>
                <div style="margin-top:12px;border:1px solid #0b5394;border-radius:8px;padding:12px;">
                  <h4 style="margin:0 0 6px 0;color:#0b5394;">NGT Request Annexure</h4>
                  <div style="display:flex;flex-wrap:wrap;gap:8px 20px;font-size:11px;margin-bottom:6px;">
                    <div><strong>References:</strong>
                      <t t-esc="', '.join(req.get('name') or '' for req in requests)"/>
                    </div>
                    <div><strong>Contract / SO:</strong> <t t-esc="requests[0].get('contract_name')"/></div>
                    <div><strong>Status:</strong> Approved</div>
                    <div><strong>MGQ (Monthly):</strong> <t t-esc="requests[0].get('mgq_monthly', 0.0)"/></div>
                  </div>
                  <table class="gor-full-table" style="margin-top:4px;font-size:11px;">
                    <thead style="display: table-header-group;">
                      <tr>
                        <th>Sr.</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>Total Hours</th>
                      </tr>
                    </thead>
                    <tbody>
                      <t t-foreach="[(i + 1, req) for i, req in enumerate(requests)]" t-as="item">
                        <t t-set="idx" t-value="item[0]"/>
                        <t t-set="request" t-value="item[1]"/>
                        <tr>
                          <td><t t-esc="idx"/></td>
                          <td class="gor-text-left"><t t-esc="request.get('period_start')"/></td>
                          <td class="gor-text-left"><t t-esc="request.get('period_end')"/></td>
                          <td><t t-esc="request.get('hours', 0.0)"/></td>
                        </tr>
                      </t>
                    </tbody>
                  </table>
                  <table class="gor-full-table" style="margin-top:8px;font-size:11px;">
                    <thead style="display: table-header-group;">
                      <tr>
                        <th>Label</th>
                        <th class="gor-text-right">Value</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td class="gor-text-left">Total Hours (NGT)</td>
                        <td><t t-esc="total_hours"/></td>
                      </tr>
                      <tr>
                        <td class="gor-text-left">Per Hour Rate (m³/hr)</td>
                        <td><t t-esc="requests[0].get('hour_rate', 0.0)"/></td>
                      </tr>
                      <tr>
                        <th class="gor-text-left">NGT Quantity (m³)</th>
                        <th><t t-esc="total_qty"/></th>
                      </tr>
                    </tbody>
                  </table>
                  <div style="font-size:10px;margin:4px 0 6px 0;">
                    NGT Calculation = Total Hours × Per Hour Rate = <t t-esc="total_hours"/> × <t t-esc="requests[0].get('hour_rate', 0.0)"/> = <t t-esc="total_qty"/> m³
                  </div>
                  <t t-if="payload.get('loto_requests')">
                    <div style="margin-top:12px;padding:0;">
                      <h6 style="margin:0 0 6px 0;color:#0b5394;font-size:12px;">LOTO / Breakdown</h6>
                      <div style="display:flex;flex-wrap:wrap;gap:8px 20px;font-size:11px;margin-bottom:6px;">
                        <div><strong>References:</strong>
                          <t t-esc="', '.join(l.get('name') or '' for l in payload.get('loto_requests'))"/>
                        </div>
                        <div><strong>Contract / SO:</strong> <t t-esc="payload.get('contract_name')"/></div>
                        <div><strong>Status:</strong> Approved</div>
                        <div><strong>MGQ (Monthly):</strong> <t t-esc="payload.get('target_qty', 0.0)"/></div>
                      </div>
                      <table class="gor-full-table" style="margin-bottom:10px;">
                        <thead style="display: table-header-group;">
                          <tr>
                            <th>Reference</th>
                            <th>Period</th>
                            <th>Total Hours</th>
                            <th>Wave-Off Applied</th>
                            <th>Chargeable</th>
                            <th>Reason</th>
                          </tr>
                        </thead>
                        <tbody>
                          <t t-foreach="payload.get('loto_requests', [])" t-as="loto">
                            <tr>
                              <td class="gor-text-left"><t t-esc="loto.get('name')"/></td>
                              <td class="gor-text-left">
                                <div><t t-esc="loto.get('period_start')"/></div>
                                <div><t t-esc="loto.get('period_end')"/></div>
                              </td>
                              <td><t t-esc="loto.get('hours_total', 0.0)"/></td>
                              <td><t t-esc="loto.get('hours_waveoff', 0.0)"/></td>
                              <td><t t-esc="loto.get('hours_chargeable', 0.0)"/></td>
                              <td class="gor-text-left"><t t-esc="loto.get('reason')"/></td>
                            </tr>
                          </t>
                        </tbody>
                      </table>
                      <table class="gor-full-table" style="font-size:11px;">
                        <thead style="display: table-header-group;">
                          <tr>
                            <th class="gor-text-left">Label</th>
                            <th>Value</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <th class="gor-text-left">Total LOTO Approved Hours</th>
                            <td><t t-esc="payload.get('loto_total_hours', 0.0)"/></td>
                          </tr>
                          <tr>
                            <th class="gor-text-left">Wave-Off Allowance</th>
                            <td><t t-esc="payload.get('waveoff_allowance', 0.0)"/></td>
                          </tr>
                          <tr>
                            <th class="gor-text-left">Wave-Off Applied This Month</th>
                            <td style="color:#198754;"><t t-esc="payload.get('waveoff_applied', 0.0)"/></td>
                          </tr>
                          <tr>
                            <th class="gor-text-left">Chargeable LOTO Hours</th>
                            <td style="color:#ba1b1b;"><t t-esc="payload.get('loto_chargeable_hours', 0.0)"/></td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </t>
                  <t t-if="expense.get('show_expenses')">
                    <table class="gor-full-table" style="margin-top:4px;font-size:11px;">
                      <thead style="display: table-header-group;">
                        <tr>
                          <th class="gor-text-left">Sr.</th>
                          <th class="gor-text-left">Expense Category</th>
                          <th class="gor-text-left">Details</th>
                          <th>Amount</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>1</td>
                          <td class="gor-text-left">Employee Expense</td>
                          <td class="gor-text-left">Monthly employee cost</td>
                          <td><t t-esc="expense.get('currency_symbol')"/> <t t-esc="expense.get('employee_expense', 0.0)"/></td>
                        </tr>
                        <tr>
                          <td>2</td>
                          <td class="gor-text-left">Land Rent</td>
                          <td class="gor-text-left">Monthly land rent</td>
                          <td><t t-esc="expense.get('currency_symbol')"/> <t t-esc="expense.get('land_rent', 0.0)"/></td>
                        </tr>
                        <tr>
                          <td>3</td>
                          <td class="gor-text-left">Electricity Expense</td>
                          <td class="gor-text-left">
                            <div t-if="expense.get('start_meter') is not None and expense.get('end_meter') is not None">Meter: <t t-esc="expense.get('start_meter', 0.0)"/> -> <t t-esc="expense.get('end_meter', 0.0)"/> (<t t-esc="expense.get('electricity_units', 0.0)"/> units)</div>
                            <div t-else="">Metered units: <t t-esc="expense.get('electricity_units', 0.0)"/></div>
                            <div>Unit rate: <t t-esc="expense.get('currency_symbol')"/> <t t-esc="expense.get('electricity_rate', 0.0)"/> per unit</div>
                          </td>
                          <td><t t-esc="expense.get('currency_symbol')"/> <t t-esc="expense.get('electricity_expense', 0.0)"/></td>
                        </tr>
                        <tr>
                          <th colspan="3" class="gor-text-left">Total Monthly Expense</th>
                          <th><t t-esc="expense.get('currency_symbol')"/> <t t-esc="expense.get('total_expense', 0.0)"/></th>
                        </tr>
                      </tbody>
                    </table>
                    <div style="font-size:10px;margin-top:6px;">
                      <strong>NGT Rate per m³ :</strong>
                      <t t-esc="expense.get('currency_symbol')"/> <t t-esc="('%.2f' % expense.get('rate_per_m3', 0.0))"/>
                      <div style="margin-top:2px;">
                        <t t-if="expense.get('mgq_target')">
                          NGT Rate per m³ = Total Monthly Expense / Monthly MGQ Target = <t t-esc="expense.get('currency_symbol')"/> <t t-esc="('%.2f' % expense.get('total_expense', 0.0))"/> / <t t-esc="expense.get('mgq_target', 0.0)"/> = <t t-esc="('%.2f' % expense.get('rate_per_m3', 0.0))"/>
                        </t>
                      </div>
                    </div>
                  </t>
                  <div t-if="not expense.get('show_expenses')" style="font-size:10px;margin-top:6px;">No expense inputs captured for this NGT request.</div>
                  <t t-if="expense.get('reason')">
                    <div style="font-size:10px;margin-top:6px;"><strong>Notes / Reason:</strong> <t t-esc="expense.get('reason')"/></div>
                  </t>
                  <t t-set="period_start_first" t-value="requests and requests[0].get('period_start') or ''"/>
                  <t t-set="period_end_last" t-value="requests and requests[-1].get('period_end') or ''"/>
                  <t t-set="period_starts" t-value="', '.join([r.get('period_start') or '' for r in requests])"/>
                  <t t-set="period_ends" t-value="', '.join([r.get('period_end') or '' for r in requests])"/>
                  <div style="margin:12px 0 0 0;padding:8px;border-left:4px solid #0b5394;background:#f3f7fb;font-size:11px;">
                    <div style="font-weight:600;margin-bottom:4px;">NGT Period Calculation Details</div>
                    <div>NGT (No-Generation Time) Period Hours: <t t-esc="total_hours"/></div>
                    <div>Time delta window: Start <t t-esc="period_starts"/> | End <t t-esc="period_ends"/></div>
                    <div>Total Duration (hours): <t t-esc="total_hours"/></div>
                    <div>Total Duration (days): <t t-esc="('%.2f' % (total_hours / 24.0)) if total_hours else '0.00'"/></div>
                  </div>
                  <t t-if="payload.get('loto_requests')">
                    <t t-set="loto_list" t-value="payload.get('loto_requests') or []"/>
                    <t t-set="loto_total_hours" t-value="payload.get('loto_total_hours', 0.0) or sum(l.get('hours_total', 0.0) for l in loto_list)"/>
                    <t t-set="loto_chargeable_hours" t-value="payload.get('loto_chargeable_hours', 0.0)"/>
                    <t t-set="loto_period_starts" t-value="', '.join([l.get('period_start') or '' for l in loto_list])"/>
                    <t t-set="loto_period_ends" t-value="', '.join([l.get('period_end') or '' for l in loto_list])"/>
                    <div style="margin:8px 0 0 0;padding:8px;border-left:4px solid #0b5394;background:#f3f7fb;font-size:11px;">
                      <div style="font-weight:600;margin-bottom:4px;">LOTO Period Calculation Details</div>
                      <div>LOTO Period Hours: <t t-esc="loto_total_hours"/></div>
                      <div>Time delta window: Start <t t-esc="loto_period_starts"/> | End <t t-esc="loto_period_ends"/></div>
                      <div>Chargeable LOTO Hours: <t t-esc="loto_chargeable_hours"/></div>
                      <div>Total Duration (days): <t t-esc="('%.2f' % (loto_chargeable_hours / 24.0)) if loto_chargeable_hours else '0.00'"/></div>
                    </div>
                  </t>
                </div>
              </t>
            </t>
            <h4 class="mt-4">Manufacturing Orders</h4>
            <table class="gor-full-table">
              <thead style="display: table-header-group;">
                <tr>
                  <th>Date</th>
                  <th>Reference</th>
                  <th>Cooling</th>
                  <th>Daily_mgq</th>
                  <th>Adj. MGQ</th>
                  <th>Prime Output</th>
                  <th>On Production</th>
                  <th>After Production</th>
                  <th>Opt.Stby.</th>
                  <th>NGT Hr.</th>
                  <th>LOTO Hr. </th>
                </tr>
              </thead>
              <tbody>
                <tr t-if="not payload.get('manufacturing_orders')">
                  <td colspan="11" class="gor-text-center">
                    No manufacturing orders were recorded for this period.
                  </td>
                </tr>
                <t t-foreach="payload.get('manufacturing_orders', [])" t-as="mo">
                  <tr>
                    <td class="gor-text-left">
                      <t t-esc="mo.get('date_start')"/>
                    </td>
                    <td class="gor-text-left">
                      <t t-esc="mo.get('reference')"/>
                    </td>
                    <td class="gor-text-center">
                      <span t-esc="mo.get('is_cooling') and 'Yes' or 'N/A'"/>
                    </td>
                    <td>
                      <t t-esc="mo.get('daily_mgq', 0.0)"/>
                    </td>
                    <td>
                      <t t-esc="mo.get('adjusted_mgq', 0.0)"/>
                    </td>
                    <td>
                      <t t-esc="mo.get('prime_output', 0.0)"/>
                    </td>
                    <td>
                      <t t-esc="mo.get('allowed_wastage', 0.0)"/>
                    </td>
                    <td>
                      <t t-esc="mo.get('actual_scrap', 0.0)"/>
                    </td>
                    <td>
                      <t t-esc="mo.get('optimized_standby', 0.0)"/>
                    </td>
                    <td>
                      <t t-esc="mo.get('ngt_hours', 0.0)"/>
                    </td>
                    <td>
                      <t t-esc="mo.get('loto_hours', 0.0)"/>
                    </td>
                  </tr>
                </t>
              </tbody>
            </table>
            <div class="gor-footer-placeholder"/>
            <div class="gor-footer">PTO....</div>
            </div>
          </t>
        </t>
      </t>
    </template>
  </data>
</odoo>
