<odoo>
    <record id="view_rmc_geo_city_alias_tree" model="ir.ui.view">
        <field name="name">rmc.geo.city.alias.tree</field>
        <field name="model">rmc.geo.city.alias</field>
        <field name="arch" type="xml">
            <list string="City Aliases">
                <field name="alias"/>
                <field name="canonical_city"/>
                <field name="website_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_rmc_geo_city_alias_form" model="ir.ui.view">
        <field name="name">rmc.geo.city.alias.form</field>
        <field name="model">rmc.geo.city.alias</field>
        <field name="arch" type="xml">
            <form string="City Alias">
                <sheet>
                    <group>
                        <field name="alias" required="1"/>
                        <field name="canonical_city" required="1"/>
                        <field name="website_id"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_rmc_geo_city_alias_search" model="ir.ui.view">
        <field name="name">rmc.geo.city.alias.search</field>
        <field name="model">rmc.geo.city.alias</field>
        <field name="arch" type="xml">
            <search string="City Aliases">
                <field name="alias"/>
                <field name="canonical_city"/>
                <field name="website_id"/>
                <filter name="inactive" string="Inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="action_rmc_geo_city_alias" model="ir.actions.act_window">
        <field name="name">City Aliases</field>
        <field name="res_model">rmc.geo.city.alias</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>
                Maintain alternate city names that should map to your canonical city spelling.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_rmc_geo_city_alias"
        name="City Aliases"
        parent="menu_rmc_geo_zone"
        sequence="40"
        action="action_rmc_geo_city_alias"
    />
</odoo>
