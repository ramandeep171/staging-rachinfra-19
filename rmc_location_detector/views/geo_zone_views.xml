<odoo>
    <record id="view_rmc_geo_zone_list" model="ir.ui.view">
        <field name="name">rmc.geo.zone.list</field>
        <field name="model">rmc.geo.zone</field>
        <field name="arch" type="xml">
            <list string="Location Zones">
                <field name="name"/>
                <field name="zip_prefix"/>
                <field name="zip_range_start"/>
                <field name="zip_range_end"/>
                <field name="city"/>
                <field name="pricelist_id"/>
                <field name="website_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_rmc_geo_zone_form" model="ir.ui.view">
        <field name="name">rmc.geo.zone.form</field>
        <field name="model">rmc.geo.zone</field>
        <field name="arch" type="xml">
            <form string="Location Zone">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="zip_prefix"/>
                        <field name="zip_range_start"/>
                        <field name="zip_range_end"/>
                        <field name="city"/>
                    </group>
                    <group>
                        <field name="pricelist_id" required="1" options="{'no_create_edit': False}"/>
                        <field name="website_id"/>
                    </group>
                    <group string="Usage Hints">
                        <label for="zip_prefix" string=""/>
                        <div class="text-muted">
                            <p>
                                <span>Enter either a City or ZIP prefix. ZIP prefix matching takes precedence and uses the longest prefix.</span>
                            </p>
                            <p>
                                <span>Assign a website to limit the zone to that site only.</span>
                            </p>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_rmc_geo_zone_search" model="ir.ui.view">
        <field name="name">rmc.geo.zone.search</field>
        <field name="model">rmc.geo.zone</field>
        <field name="arch" type="xml">
            <search string="Location Zones">
                <field name="name"/>
                <field name="zip_prefix"/>
                <field name="city"/>
                <field name="pricelist_id"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_rmc_geo_zone" model="ir.actions.act_window">
        <field name="name">Location Zones</field>
        <field name="res_model">rmc.geo.zone</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>
                Define mappings between visitor locations and website pricelists. ZIP prefixes win over city matches.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_rmc_geo_zone"
        name="Location Zones"
        parent="website.menu_website_configuration"
        sequence="35"
        action="action_rmc_geo_zone"
        groups="website.group_website_designer,website.group_website_restricted_editor"
    />

    <menuitem
        id="menu_rmc_geo_zone_settings"
        name="Location Zones"
        parent="website_sale.menu_ecommerce_settings"
        sequence="110"
        action="action_rmc_geo_zone"
        groups="website.group_website_designer,website.group_website_restricted_editor"
    />
</odoo>
