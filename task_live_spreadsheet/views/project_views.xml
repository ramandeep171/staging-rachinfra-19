<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_phase1_project_tree" model="ir.ui.view">
        <field name="name">phase1.project.tree</field>
        <field name="model">phase1.project</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="start_date"/>
                <field name="expected_end_date"/>
            </tree>
        </field>
    </record>

    <record id="view_phase1_project_form" model="ir.ui.view">
        <field name="name">phase1.project.form</field>
        <field name="model">phase1.project</field>
        <field name="arch" type="xml">
            <form string="Project">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="owner_id"/>
                    </group>
                    <group>
                        <field name="start_date"/>
                        <field name="expected_end_date"/>
                    </group>
                    <group>
                        <field name="description" colspan="2" placeholder="Describe the project scope and completion criteria."/>
                    </group>
                    <notebook>
                        <page string="Phases">
                            <field name="phase_ids" context="{'default_project_id': active_id}">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name" required="1"/>
                                    <field name="status" required="1"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_phase1_phase_tree" model="ir.ui.view">
        <field name="name">phase1.phase.tree</field>
        <field name="model">phase1.phase</field>
        <field name="arch" type="xml">
            <tree>
                <field name="project_id"/>
                <field name="sequence"/>
                <field name="name"/>
                <field name="status"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

    <record id="view_phase1_phase_form" model="ir.ui.view">
        <field name="name">phase1.phase.form</field>
        <field name="model">phase1.phase</field>
        <field name="arch" type="xml">
            <form string="Phase">
                <sheet>
                    <group>
                        <field name="project_id" required="1"/>
                        <field name="sequence"/>
                    </group>
                    <group>
                        <field name="name" required="1"/>
                        <field name="status" required="1"/>
                    </group>
                    <group>
                        <field name="notes" colspan="2" placeholder="Manual notes for grouping; no automation is triggered."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_phase1_project" model="ir.actions.act_window">
        <field name="name">Phase-1 Projects</field>
        <field name="res_model">phase1.project</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_phase1_root" name="Phase-1 Projects" sequence="10"/>
    <menuitem id="menu_phase1_project" name="Projects" parent="menu_phase1_root" action="action_phase1_project" sequence="10"/>
</odoo>
