<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_project_task_form_spreadsheet" model="ir.ui.view">
        <field name="name">project.task.form.spreadsheet</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Spreadsheet">
                    <group>
                        <field name="spreadsheet_id" widget="spreadsheet" options="{'no_create': True}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
