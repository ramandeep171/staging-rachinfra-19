<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="activity_tag_company_rule" model="ir.rule">
        <field name="name">Activity Tag multi-company</field>
        <field name="model_id" ref="model_activity_tag"/>
        <field name="domain_force">
            ['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
        </field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
