<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Diesel Log Category -->
    <record id="category_diesel_log" model="ir.module.category">
        <field name="name">Diesel Log</field>
        <field name="description">Manage diesel logs and fuel consumption</field>
        <field name="sequence">15</field>
    </record>

    <!-- Diesel Log Privilege -->
    <record id="privilege_diesel_log" model="res.groups.privilege">
        <field name="name">Diesel Log</field>
        <field name="sequence">15</field>
        <field name="category_id" ref="category_diesel_log"/>
    </record>
    
    <!-- Diesel User Group -->
    <record id="group_diesel_user" model="res.groups">
        <field name="name">Diesel User</field>
        <field name="sequence">10</field>
        <field name="privilege_id" ref="privilege_diesel_log"/>
        <field name="implied_ids" eval="[(4, ref('fleet.fleet_group_user'))]"/>
        <field name="comment">Users can create and view their own diesel logs in draft state.</field>
    </record>
    
    <!-- Diesel Manager Group -->
    <record id="group_diesel_manager" model="res.groups">
        <field name="name">Diesel Manager</field>
        <field name="sequence">20</field>
        <field name="privilege_id" ref="privilege_diesel_log"/>
        <field name="implied_ids" eval="[(4, ref('group_diesel_user')), (4, ref('fleet.fleet_group_manager')), (4, ref('stock.group_stock_user'))]"/>
        <field name="comment">Managers can confirm diesel logs, view all records, and manage configuration.</field>
    </record>
    
    <!-- Record Rules for Multi-company Support -->
    
    <!-- Diesel Log Company Rule -->
    <record id="diesel_log_company_rule" model="ir.rule">
        <field name="name">Diesel Log: multi-company</field>
        <field name="model_id" ref="model_diesel_log"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="global" eval="True"/>
    </record>
    
    <!-- Diesel Log User Rule - Users can only see their company's records -->
    <record id="diesel_log_user_rule" model="ir.rule">
        <field name="name">Diesel Log User Rule</field>
        <field name="model_id" ref="model_diesel_log"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_diesel_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    
    <!-- Diesel Log Manager Rule - Managers can see all company records -->
    <record id="diesel_log_manager_rule" model="ir.rule">
        <field name="name">Diesel Log Manager Rule</field>
        <field name="model_id" ref="model_diesel_log"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_diesel_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    
    <!-- System Admin Rule - Full access -->
    <record id="diesel_log_system_rule" model="ir.rule">
        <field name="name">Diesel Log System Rule</field>
        <field name="model_id" ref="model_diesel_log"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>