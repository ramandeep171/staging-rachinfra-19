<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_llm_mcp_command_runner_tree" model="ir.ui.view">
        <field name="name">llm.mcp.command.runner.tree</field>
        <field name="model">llm.mcp.command.runner</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="runner_type" />
                <field name="server_id" />
                <field name="sandbox_mode" />
                <field name="enabled" />
            </list>
        </field>
    </record>

    <record id="view_llm_mcp_command_runner_form" model="ir.ui.view">
        <field name="name">llm.mcp.command.runner.form</field>
        <field name="model">llm.mcp.command.runner</field>
        <field name="arch" type="xml">
            <form string="Command Runner">
                <header>
                    <button name="action_test_endpoint" string="Test Endpoint" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1><field name="name" placeholder="Runner name" /></h1>
                    </div>
                    <group>
                        <group string="Routing">
                            <field name="server_id" />
                            <field name="runner_type" />
                            <field name="entrypoint" />
                            <field name="sandbox_mode" />
                            <field name="enabled" />
                        </group>
                        <group string="Policies">
                            <field name="retry_policy" />
                            <field name="circuit_breaker" />
                            <field name="auth_headers" />
                        </group>
                    </group>
                    <group string="Allowed Tools">
                        <field name="allowed_tool_ids" widget="many2many_tags" />
                    </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="action_llm_mcp_command_runner" model="ir.actions.act_window">
        <field name="name">Command Runners</field>
        <field name="res_model">llm.mcp.command.runner</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_enabled': 1}</field>
    </record>
</odoo>
