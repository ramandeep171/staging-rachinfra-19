<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_llm_mcp_audit_trail_tree" model="ir.ui.view">
        <field name="name">llm.mcp.audit.trail.tree</field>
        <field name="model">llm.mcp.audit.trail</field>
        <field name="arch" type="xml">
            <list>
                <field name="invocation_id" />
                <field name="event_type" />
                <field name="severity" />
                <field name="system_flagged" />
                <field name="created_at" />
            </list>
        </field>
    </record>

    <record id="view_llm_mcp_audit_trail_form" model="ir.ui.view">
        <field name="name">llm.mcp.audit.trail.form</field>
        <field name="model">llm.mcp.audit.trail</field>
        <field name="arch" type="xml">
            <form string="Audit Trail">
                <sheet>
                    <group>
                        <group>
                            <field name="invocation_id" />
                            <field name="event_type" />
                            <field name="severity" />
                            <field name="system_flagged" />
                            <field name="created_at" />
                        </group>
                        <group string="Details">
                            <field name="details_json" widget="json" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_llm_mcp_audit_trail" model="ir.actions.act_window">
        <field name="name">Audit Trail</field>
        <field name="res_model">llm.mcp.audit.trail</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
