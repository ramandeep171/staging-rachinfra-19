<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Create a website page record that uses the template -->
    <record id="page_rmc_calculator" model="website.page">
        <field name="name">Ready Mix Concrete</field>
        <field name="url">/ready-mixed-concrete</field>
        <field name="is_published">True</field>
        <field name="website_id" ref="website.default_website"/>
        <!-- refer to FULL landing page template -->
        <field name="view_id" ref="website_rmc_calculator.rmc_landing_full_page"/>
    </record>

    <!-- Add menu item under Website > Shop (adjust parent if needed) -->
    <record id="menu_rmc_calculator" model="website.menu">
        <field name="name">Ready Mix Concrete</field>
        <field name="url">/ready-mixed-concrete</field>
        <field name="sequence">10</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="website_id" ref="website.default_website"/>
    </record>
    
    <!-- Sales/CRM team for RMC leads -->
    <record id="team_rmc_dropshing" model="crm.team">
        <field name="name">rmc_dropshing</field>
        <field name="use_leads">1</field>
    </record>
</odoo>

