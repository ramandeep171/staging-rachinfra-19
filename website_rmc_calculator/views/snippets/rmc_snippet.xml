<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Standalone snippet template for RMC Calculator (no xpath/inherit to avoid ParseError) -->
    <template id="snippet_template_rmc_calculator" name="RMC Calculator Snippet">
      <div class="s_rmc_calculator snippet rmc-calculator-snippet" data-name="RMC Calculator" data-snippet="rmc_calculator">
        <div class="container">
          <div class="row">
            <div class="col-12">
              <div class="rmc-widget" style="margin:10px 0;">
                <label for="grade_select">Grade</label>
                <select id="grade_select" name="product_tmpl_id" class="form-control" data-placeholder="Select concrete grade"></select>
                <label style="margin-top:6px;" for="variant_select">Variant (optional)</label>
                <select id="variant_select" name="product_id" class="form-control"></select>
                <div style="margin-top:8px; display:flex; gap:8px; align-items:center;">
                  <input id="rmc_volume" placeholder="Volume (m³)" class="form-control" style="width:120px;" />
                  <button id="open_dim_popup" class="btn btn-primary" type="button">Calculate</button>
                  <button id="add_to_cart_rmc" class="btn btn-secondary" type="button">Add to Cart</button>
                  <button id="request_quote_btn" class="btn btn-success" type="button">Request Quote</button>
                </div>
                <div id="variant_details" style="margin-top:6px; font-size:0.95em; color:#333;"></div>
                <div class="rmc-price-pill" id="variant_price">Unit price: ₹0</div>
                <div class="rmc-price-summary">
                  <div class="rmc-summary-card">
                    <div class="rmc-summary-label">Base Total</div>
                    <div class="rmc-summary-value" id="base_price">₹0</div>
                  </div>
                  <div class="rmc-summary-card">
                    <div class="rmc-summary-label">Bulk Discount</div>
                    <div class="rmc-summary-value" id="bulk_discount">₹0</div>
                  </div>
                  <div class="rmc-summary-card">
                    <div class="rmc-summary-label">Truck Loads</div>
                    <div class="rmc-summary-value" id="truck_count">0</div>
                  </div>
                </div>
                <div style="font-size:1.5rem; font-weight:600; margin-top:8px;" id="estimated_total">₹0</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </template>
  </data>
</odoo>
