<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Add Request Kind field + Smart Button -->
    <record id="view_maintenance_request_form_spx_inherit" model="ir.ui.view">
      <field name="name">maintenance.request.form.spx.jobcard.inherit</field>
      <field name="model">maintenance.request</field>
      <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
      <field name="arch" type="xml">
        <field name="equipment_id" position="after">
          <field name="spx_kind"/>
        </field>
        <xpath expr="//header" position="inside">
          <button name="action_open_or_create_jobcard" type="object" class="oe_highlight" string="Job Card"/>
          <button name="action_view_spare_picking" type="object" class="oe_stat_button" icon="fa-truck">
            <field name="spare_picking_count" widget="statinfo" string="Pickings"/>
          </button>
        </xpath>
  <!-- Spare Parts tab moved to maintenance_request_spare_views.xml to avoid view parse conflicts -->
      </field>
    </record>

  </data>
</odoo>
