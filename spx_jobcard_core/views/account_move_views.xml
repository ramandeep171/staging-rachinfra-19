<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Put Job Card right in the header, after Vendor (partner_id) -->
    <record id="view_move_form_inherit_spx_jobcard_header" model="ir.ui.view">
      <field name="name">account.move.form.inherit.spx.jobcard.header</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="priority" eval="90"/>  <!-- load late so it wins over others -->
      <field name="arch" type="xml">
        <!-- Header vendor field ke turant baad insert -->
        <xpath expr="//sheet//field[@name='partner_id']" position="after">
          <field name="jobcard_id" string="Job Card" invisible="move_type != 'in_invoice'"/>
        </xpath>
      </field>
    </record>

    <!-- Fallback: agar kisi template me partner_id header me nahi mila,
         to invoice_date ke baad insert kar do -->
    <record id="view_move_form_inherit_spx_jobcard_header_fallback" model="ir.ui.view">
      <field name="name">account.move.form.inherit.spx.jobcard.header.fallback</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="priority" eval="89"/>
      <field name="arch" type="xml">
        <xpath expr="//sheet//field[@name='invoice_date']" position="after">
          <field name="jobcard_id" string="Job Card" invisible="move_type != 'in_invoice'"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>
