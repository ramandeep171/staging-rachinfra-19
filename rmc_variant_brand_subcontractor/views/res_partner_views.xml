<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form_inherit_subcontractor_flag" model="ir.ui.view">
        <field name="name">res.partner.form.subcontractor.flag</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']//group[1]" position="inside">
                <field name="is_subcontractor"/>
            </xpath>
        </field>
    </record>
</odoo>
