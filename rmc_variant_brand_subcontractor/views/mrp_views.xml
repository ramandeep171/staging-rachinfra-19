<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="mrp_production_tree_inherit_brand_subcontractor" model="ir.ui.view">
        <field name="name">mrp.production.tree.brand.subcontractor</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//list/field[@name='product_id']" position="after">
                <field name="x_subcontractor_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="mrp_production_form_inherit_brand_subcontractor" model="ir.ui.view">
        <field name="name">mrp.production.form.brand.subcontractor</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form//field[@name='product_description_variants']" position="after">
                <field name="x_subcontractor_id"
                       invisible="not product_id"
                       readonly="state in ('done', 'cancel')"/>
            </xpath>
        </field>
    </record>
</odoo>
