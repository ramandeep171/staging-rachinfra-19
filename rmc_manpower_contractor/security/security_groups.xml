<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Security Categories -->
        <record id="module_category_rmc_contractor" model="ir.module.category">
            <field name="name">RMC Contractor</field>
            <field name="description">Manage RMC contractor operations and billing</field>
            <field name="sequence">20</field>
        </record>

        <!-- Privilege for RMC Contractor -->
        <record id="privilege_rmc_contractor" model="res.groups.privilege">
            <field name="name">RMC Contractor</field>
            <field name="category_id" ref="module_category_rmc_contractor"/>
            <field name="sequence">10</field>
        </record>

        <!-- User Groups -->
        <record id="group_rmc_contractor_user" model="res.groups">
            <field name="name">User</field>
            <field name="privilege_id" ref="privilege_rmc_contractor"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can view and create operational records for own agreements</field>
        </record>

        <record id="group_rmc_supervisor" model="res.groups">
            <field name="name">Supervisor</field>
            <field name="privilege_id" ref="privilege_rmc_contractor"/>
            <field name="implied_ids" eval="[(4, ref('group_rmc_contractor_user'))]"/>
            <field name="comment">Can validate records and approve at supervisor level</field>
        </record>

        <record id="group_rmc_contractor_manager" model="res.groups">
            <field name="name">Contractor Manager</field>
            <field name="privilege_id" ref="privilege_rmc_contractor"/>
            <field name="implied_ids" eval="[(4, ref('group_rmc_supervisor'))]"/>
            <field name="comment">Contractor-side managers with full visibility on operational records</field>
        </record>

        <record id="group_rmc_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="privilege_id" ref="privilege_rmc_contractor"/>
            <field name="implied_ids" eval="[(4, ref('group_rmc_supervisor')), (4, ref('sign.group_sign_user'))]"/>
            <field name="comment">Full access to all RMC contractor operations</field>
        </record>

    </data>
</odoo>
