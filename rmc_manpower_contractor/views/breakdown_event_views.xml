<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_breakdown_event_form" model="ir.ui.view">
            <field name="name">rmc.breakdown.event.form</field>
            <field name="model">rmc.breakdown.event</field>
            <field name="arch" type="xml">
                <form string="Breakdown Event">
                    <header>
                        <button name="action_confirm"
                                string="Confirm"
                                type="object"
                                class="oe_highlight"
                                invisible="state != 'draft'"/>
                        <button name="action_close"
                                string="Close"
                                type="object"
                                invisible="state == 'closed'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="agreement_id"/>
                                <field name="event_type"/>
                                <field name="start_time"/>
                                <field name="end_time"/>
                                <field name="downtime_hr" readonly="1"/>
                            </group>
                            <group>
                                <field name="responsibility"/>
                                <field name="standby_staff"/>
                                <field name="standby_allowance"/>
                                <field name="is_mgq_achieved"/>
                                <field name="deduction_amount" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                            <field name="corrective_action"/>
                        </group>
                    </sheet>
                   <chatter/>
                </form>
            </field>
        </record>

        <record id="view_breakdown_event_tree" model="ir.ui.view">
            <field name="name">rmc.breakdown.event.tree</field>
            <field name="model">rmc.breakdown.event</field>
            <field name="arch" type="xml">
                <list decoration-danger="responsibility == 'contractor'">
                    <field name="name"/>
                    <field name="agreement_id"/>
                    <field name="event_type"/>
                    <field name="downtime_hr"/>
                    <field name="deduction_amount"/>
                    <field name="state" widget="badge"/>
                </list>
            </field>
        </record>

        <record id="action_breakdown_event" model="ir.actions.act_window">
            <field name="name">Breakdown Events</field>
            <field name="res_model">rmc.breakdown.event</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
