<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_maintenance_check_form" model="ir.ui.view">
            <field name="name">rmc.maintenance.check.form</field>
            <field name="model">rmc.maintenance.check</field>
            <field name="arch" type="xml">
                <form string="Maintenance Check">
                    <header>
                        <button name="action_validate"
                                string="Validate"
                                type="object"
                                class="oe_highlight"
                                invisible="state == 'validated'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="agreement_id"/>
                                <field name="date"/>
                                <field name="machine_id"/>
                                <field name="employee_id" context="{'default_agreement_id': agreement_id}" options="{'no_quick_create': True}"/>
                            </group>
                            <group>
                                <field name="checklist_ok"/>
                                <field name="repaired"/>
                                <field name="cost"/>
                            </group>
                        </group>
                        <field name="defects_found"/>
                        <field name="notes"/>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="view_maintenance_check_tree" model="ir.ui.view">
            <field name="name">rmc.maintenance.check.tree</field>
            <field name="model">rmc.maintenance.check</field>
            <field name="arch" type="xml">
                <list decoration-success="state == 'validated'">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="agreement_id"/>
                    <field name="employee_id"/>
                    <field name="checklist_ok"/>
                    <field name="repaired"/>
                    <field name="state" widget="badge"/>
                </list>
            </field>
        </record>

        <record id="action_maintenance_check" model="ir.actions.act_window">
            <field name="name">Maintenance Checks</field>
            <field name="res_model">rmc.maintenance.check</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
