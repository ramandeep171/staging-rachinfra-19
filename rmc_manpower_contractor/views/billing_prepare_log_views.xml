<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_rmc_billing_prepare_log_list" model="ir.ui.view">
            <field name="name">rmc.billing.prepare.log.list</field>
            <field name="model">rmc.billing.prepare.log</field>
            <field name="arch" type="xml">
                <list string="Billing Logs" create="false" edit="false" delete="false">
                    <field name="name"/>
                    <field name="agreement_id"/>
                    <field name="period_start"/>
                    <field name="period_end"/>
                    <field name="mgq_achieved"/>
                    <field name="prime_output_qty"/>
                    <field name="optimized_standby_qty"/>
                    <field name="mgq_achievement_pct"/>
                    <field name="part_a_amount"/>
                    <field name="part_b_amount"/>
                    <field name="bonus_penalty_amount"/>
                    <field name="tds_amount"/>
                    <field name="total_amount"/>
                    <field name="bill_id"/>
                    <field name="created_on"/>
                    <field name="created_by"/>
                </list>
            </field>
        </record>

        <record id="view_rmc_billing_prepare_log_form" model="ir.ui.view">
            <field name="name">rmc.billing.prepare.log.form</field>
            <field name="model">rmc.billing.prepare.log</field>
            <field name="arch" type="xml">
                <form string="Billing Log" create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="agreement_id" readonly="1"/>
                                <field name="bill_id" readonly="1"/>
                                <field name="state" readonly="1"/>
                                <field name="created_on" readonly="1"/>
                                <field name="created_by" readonly="1"/>
                            </group>
                            <group>
                                <field name="period_start" readonly="1"/>
                                <field name="period_end" readonly="1"/>
                                <field name="mgq_target" readonly="1"/>
                                <field name="mgq_achieved" readonly="1"/>
                                <field name="prime_output_qty" readonly="1"/>
                                <field name="optimized_standby_qty" readonly="1"/>
                                <field name="mgq_achievement_pct" readonly="1"/>
                            </group>
                        </group>
                        <group string="Financial Snapshot">
                            <group>
                                <field name="part_a_amount" readonly="1"/>
                                <field name="part_b_amount" readonly="1"/>
                                <field name="breakdown_deduction" readonly="1"/>
                                <field name="inventory_variance" readonly="1"/>
                            </group>
                            <group>
                                <field name="bonus_penalty_pct" readonly="1"/>
                                <field name="bonus_penalty_amount" readonly="1"/>
                                <field name="subtotal" readonly="1"/>
                                <field name="tds_amount" readonly="1"/>
                                <field name="total_amount" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Attendance">
                                <group>
                                    <field name="attach_attendance" readonly="1"/>
                                    <field name="attendance_attachment_id" readonly="1" context="{'create': False}"/>
                                </group>
                                <field name="attendance_preview_html" widget="html" readonly="1"/>
                            </page>
                            <page string="Diesel">
                                <group>
                                    <field name="attach_diesel" readonly="1"/>
                                    <field name="diesel_attachment_id" readonly="1" context="{'create': False}"/>
                                </group>
                                <field name="diesel_preview_html" widget="html" readonly="1"/>
                            </page>
                            <page string="Maintenance">
                                <group>
                                    <field name="attach_maintenance" readonly="1"/>
                                    <field name="maintenance_attachment_id" readonly="1" context="{'create': False}"/>
                                </group>
                                <field name="maintenance_preview_html" widget="html" readonly="1"/>
                            </page>
                            <page string="Breakdown">
                                <group>
                                    <field name="attach_breakdown" readonly="1"/>
                                    <field name="breakdown_attachment_id" readonly="1" context="{'create': False}"/>
                                </group>
                                <field name="breakdown_preview_html" widget="html" readonly="1"/>
                            </page>
                            <page string="All Attachments">
                                <field name="attachment_ids" widget="many2many_binary" readonly="1"/>
                            </page>
                        </notebook>
                        <field name="notes" readonly="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_rmc_billing_prepare_log" model="ir.actions.act_window">
            <field name="name">Billing Logs</field>
            <field name="res_model">rmc.billing.prepare.log</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>
