<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Agreement Form View -->
        <record id="view_rmc_agreement_form" model="ir.ui.view">
            <field name="name">rmc.contract.agreement.form</field>
            <field name="model">rmc.contract.agreement</field>
            <field name="arch" type="xml">
                <form string="RMC Contract Agreement">
                    <header>
                        <button name="action_preview_and_send" string="Preview &amp; Send" type="object" class="btn-secondary" invisible="state not in ['draft', 'offer', 'negotiation', 'verification']"/>
                        <button name="action_send_for_sign" string="Send for Signature" type="object" class="oe_highlight" invisible="state not in ['draft', 'offer', 'negotiation', 'verification']"/>
                        <button name="action_prepare_monthly_bill" string="Prepare Monthly Bill" type="object" class="oe_highlight" invisible="state != 'active'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,offer,sign_pending,active"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_diesel_logs" type="object" class="oe_stat_button" icon="fa-tint">
                                <field name="diesel_log_count" widget="statinfo" string="Diesel Logs"/>
                            </button>
                            <button name="action_view_employee_attendance" type="object" class="oe_stat_button" icon="fa-calendar-check-o">
                                <field name="employee_attendance_count" widget="statinfo" string="HR Attendance"/>
                            </button>
                            <button name="action_view_breakdowns" type="object" class="oe_stat_button" icon="fa-exclamation-triangle">
                                <field name="breakdown_event_count" widget="statinfo" string="Breakdowns"/>
                            </button>
                            <button name="action_view_inventory" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="inventory_handover_count" widget="statinfo" string="Inventory"/>
                            </button>
                            <button name="action_new_inventory_handover" type="object" class="oe_stat_button" icon="fa-cubes">
                                <field name="inventory_handover_count" widget="statinfo" string="New Inventory Request"/>
                            </button>
                            <button name="action_view_fleet_vehicles" type="object" class="oe_stat_button" icon="fa-truck">
                                <field name="fleet_vehicle_count" widget="statinfo" string="Fleet"/>
                            </button>
                            <button name="action_view_vendor_bills" type="object" class="oe_stat_button" icon="fa-money">
                                <field name="vendor_bill_count" widget="statinfo" string="Bills"/>
                            </button>
                            <button name="action_view_equipment" type="object" class="oe_stat_button" icon="fa-cogs">
                                <field name="equipment_count" widget="statinfo" string="Equipment"/>
                            </button>
                            <button name="action_view_equipment_requests" type="object" class="oe_stat_button" icon="fa-wrench">
                                <field name="equipment_request_count" widget="statinfo" string="Maint. Requests"/>
                            </button>
                            <button name="action_view_sign_request" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="not sign_request_id">
                                <field name="sign_state" widget="badge" string="Sign Status"/>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="Signed" bg_color="text-bg-success" invisible="not is_agreement_signed"/>
                        <widget name="web_ribbon" title="Payment Hold" bg_color="text-bg-danger" invisible="not payment_hold"/>
                        
                        <div class="oe_title">
                            <label for="name" string="Agreement"/>
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="contractor_id" options="{'no_create': True}"/>
                                <field name="contract_type" readonly="is_agreement_signed"/>
                                <field name="validity_start"/>
                                <field name="validity_end"/>
                            </group>
                            <group>
                                <field name="sign_template_id"/>
                                <field name="sign_request_id" readonly="1"/>
                                <field name="is_agreement_signed" invisible="1"/>
                                <field name="dynamic_web_path" widget="url"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        
                        <!-- Performance Dashboard -->
                        <group string="Performance Dashboard" col="4">
                            <field name="performance_score" widget="progressbar"/>
                            <field name="stars" widget="badge"/>
                            <field name="avg_diesel_efficiency"/>
                            <field name="maintenance_compliance" widget="progressbar"/>
                            <field name="attendance_compliance" widget="progressbar"/>
                            <field name="pending_items_count" widget="badge" decoration-danger="pending_items_count &gt; 0"/>
                            <field name="payment_hold" widget="boolean_toggle"/>
                            <field name="payment_hold_reason" widget="text" invisible="not payment_hold" colspan="4"/>
                        </group>
                        
                        <!-- Financial -->
                        <group string="Financial Details">
                            <group>
                                <field name="mgq_target"/>
                                <field name="part_a_fixed"/>
                                <field name="part_b_variable"/>
                                <field name="total_amount" string="Total Monthly Amount"/>
                            </group>
                            <group>
                                <field name="analytic_account_id"/>
                            </group>
                        </group>
                        
                        <!-- Manpower Matrix -->
                        <notebook>
                            <page string="Manpower Matrix">
                                <field name="manpower_matrix_ids">
                                    <form>
                                        <group>
                                            <group>
                                                <field name="designation"/>
                                                <field name="employee_id"
                                                       options="{'no_quick_create': True}"/>
                                                <field name="headcount"/>
                                                <field name="shift"/>
                                            </group>
                                            <group>
                                                <field name="base_rate"/>
                                                <field name="remark"/>
                                                <field name="vehicle_id"
                                                       options="{'no_quick_create': True}"/>
                                                <field name="total_amount"/>
                                                <field name="currency_id" invisible="1"/>
                                            </group>
                                        </group>
                                    </form>
                                    <list editable="bottom">
                                        <field name="job_position_name" readonly="1" string="Job Position"/>
                                        <field name="employee_id"/>
                                        <!-- <field name="vehicle_id"/> -->
                                        <field name="headcount"/>
                                        <field name="shift"/>
                                        <field name="base_rate"/>
                                        <field name="remark"/>
                                        <field name="total_amount" sum="Total"/>
                                        <field name="currency_id" column_invisible="1"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Fleet &amp; Workforce">
                                <group>
                                    <group>
                                        <field name="vehicle_ids" widget="many2many_tags" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="driver_ids" widget="many2many_tags" readonly="1"/>
                                    </group>
                                </group>
                                <field name="vehicle_diesel_log_ids" nolabel="1" readonly="1" widget="many2many_tags" options="{'no_create': True, 'no_edit': True, 'no_open': False}"/>
                                <field name="equipment_ids" nolabel="1" widget="many2many_tags" readonly="1" options="{'no_create': True, 'no_edit': True, 'no_open': False}"/>
                                <field name="equipment_request_ids" nolabel="1" widget="many2many_tags" readonly="1" options="{'no_create': True, 'no_edit': True, 'no_open': False}"/>
                                <field name="employee_attendance_ids" readonly="1" nolabel="1" widget="many2many_tags" options="{'no_create': True, 'no_edit': True, 'no_open': False}"/>
                            </page>
                            <page string="Inventory">
                                <field name="inventory_handover_ids"
                                       domain="['|', ('date', '=', False), ('date', '>=', activity_start_date)]"
                                       context="{'default_agreement_id': id, 'default_contractor_id': contractor_id}"/>
                            </page>
                            <page string="Signers">
                                <field name="signer_ids"/>
                                <label for="signer_ids" help="Override the partner assigned to each Sign template role. Leave empty to use defaults."/>
                            </page>
                            <page string="Clauses">
                                <field name="clause_ids"
                                       context="{'default_agreement_id': id}"
                                       views="[(ref('rmc_manpower_contractor.view_rmc_agreement_clause_tree'), 'list'), (ref('rmc_manpower_contractor.view_rmc_agreement_clause_form'), 'form')]"/>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="view_rmc_agreement_clause_tree" model="ir.ui.view">
            <field name="name">rmc.agreement.clause.tree</field>
            <field name="model">rmc.agreement.clause</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Agreement Clauses" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="title"/>
                    <field name="body_html" widget="html" optional="hide"/>
                </list>
            </field>
        </record>

        <record id="view_rmc_agreement_clause_form" model="ir.ui.view">
            <field name="name">rmc.agreement.clause.form</field>
            <field name="model">rmc.agreement.clause</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Agreement Clause">
                    <sheet>
                        <group>
                            <field name="title"/>
                            <field name="sequence"/>
                        </group>
                        <field name="body_html" widget="html" class="o_rmc_clause_body"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_rmc_agreement_performance_tree" model="ir.ui.view">
            <field name="name">rmc.contract.agreement.performance.tree</field>
            <field name="model">rmc.contract.agreement</field>
            <field name="arch" type="xml">
                <list string="Agreement Performance Overview">
                    <field name="name"/>
                    <field name="contractor_id"/>
                    <field name="contract_type"/>
                    <field name="sign_state"/>
                    <field name="performance_score" widget="progressbar"/>
                    <field name="mgq_target"/>
                    <field name="pending_items_count"/>
                    <field name="payment_hold"/>
                    <field name="validity_start"/>
                    <field name="validity_end"/>
                </list>
            </field>
        </record>

        <record id="view_rmc_agreement_performance_pivot" model="ir.ui.view">
            <field name="name">rmc.contract.agreement.performance.pivot</field>
            <field name="model">rmc.contract.agreement</field>
            <field name="arch" type="xml">
                <pivot string="Agreement Performance Overview">
                    <field name="performance_score" type="measure"/>
                    <field name="pending_items_count" type="measure"/>
                    <field name="mgq_target" type="measure"/>
                    <field name="part_a_fixed" type="measure"/>
                    <field name="part_b_variable" type="measure"/>
                    <field name="contractor_id" type="row"/>
                    <field name="contract_type" type="col"/>
                    <field name="state" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="view_rmc_agreement_performance_graph" model="ir.ui.view">
            <field name="name">rmc.contract.agreement.performance.graph</field>
            <field name="model">rmc.contract.agreement</field>
            <field name="arch" type="xml">
                <graph string="Agreement Performance" type="bar">
                    <field name="performance_score" type="measure"/>
                    <field name="contractor_id" type="row"/>
                    <field name="contract_type" type="col"/>
                </graph>
            </field>
        </record>

        <record id="action_rmc_agreement_performance_dashboard" model="ir.actions.act_window">
            <field name="name">Agreement Performance Dashboard</field>
            <field name="res_model">rmc.contract.agreement</field>
            <field name="view_mode">pivot,graph,list</field>
            <field eval="False" name="view_id"/>
            <field name="context">{'search_default_group_by_contract_type': 1}</field>
            <field name="help" type="html">
                <p>
                    Analyse agreement performance with pivot, chart, and list views. Drill down by contractor,
                    contract type, signature status, and MGQ targets. Use the Print menu to download a consolidated
                    performance summary.
                </p>
            </field>
        </record>

        <!-- Agreement Tree View -->
        <record id="view_rmc_agreement_tree" model="ir.ui.view">
            <field name="name">rmc.contract.agreement.tree</field>
            <field name="model">rmc.contract.agreement</field>
            <field name="arch" type="xml">
                <list string="RMC Agreements" decoration-success="state == 'active'" decoration-warning="payment_hold == True" decoration-muted="state == 'expired'">
                    <field name="name"/>
                    <field name="contractor_id"/>
                    <field name="contract_type"/>
                    <field name="performance_score" widget="progressbar"/>
                    <field name="stars"/>
                    <field name="payment_hold" widget="boolean_toggle" readonly="1"/>
                    <field name="pending_items_count"/>
                    <field name="state" widget="badge" decoration-success="state == 'active'" decoration-info="state == 'sign_pending'"/>
                </list>
            </field>
        </record>

        <!-- Agreement Search View -->
        <record id="view_rmc_agreement_search" model="ir.ui.view">
            <field name="name">rmc.contract.agreement.search</field>
            <field name="model">rmc.contract.agreement</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="contractor_id"/>
                    <field name="contract_type"/>
                    <filter string="Active" name="filter_active" domain="[('state', '=', 'active')]"/>
                    <filter string="Payment Hold" name="filter_payment_hold" domain="[('payment_hold', '=', True)]"/>
                    <filter string="Pending Signature" name="filter_pending_sign" domain="[('state', '=', 'sign_pending')]"/>
                    <group>
                        <filter string="Contract Type" name="group_contract_type" context="{'group_by': 'contract_type'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Contractor" name="group_contractor" context="{'group_by': 'contractor_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Agreement Kanban View -->
        <record id="view_rmc_agreement_kanban" model="ir.ui.view">
            <field name="name">rmc.contract.agreement.kanban</field>
            <field name="model">rmc.contract.agreement</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="contractor_id"/>
                    <field name="contract_type"/>
                    <field name="performance_score"/>
                    <field name="stars"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <div><field name="contractor_id"/></div>
                                    </div>
                                    <span class="float-end badge text-bg-primary"><field name="contract_type"/></span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div>Performance: <field name="performance_score"/>% <field name="stars"/></div>
                                    <span class="badge" t-att-class="record.state.raw_value == 'active' ? 'text-bg-success' : 'text-bg-warning'">
                                        <field name="state"/>
                                    </span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Agreement Action -->
        <record id="action_rmc_agreement" model="ir.actions.act_window">
            <field name="name">Agreements</field>
            <field name="res_model">rmc.contract.agreement</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first RMC Contractor Agreement
                </p>
            </field>
        </record>

    </data>
</odoo>
