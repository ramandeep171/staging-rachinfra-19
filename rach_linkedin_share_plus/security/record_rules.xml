<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_job_share_log_company_rule" model="ir.rule">
        <field name="name">Job Share Logs: company isolation</field>
        <field name="model_id" ref="model_hr_job_share_log"/>
        <field name="global" eval="False"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', user.company_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('hr_recruitment.group_hr_recruitment_user')), (4, ref('hr_recruitment.group_hr_recruitment_manager'))]"/>
    </record>
</odoo>
