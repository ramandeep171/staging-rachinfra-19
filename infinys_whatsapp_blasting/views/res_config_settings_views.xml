<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_infinys_whatsapp" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.infinys.whatsapp</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app name="infinys_whatsapp" string="WhatsApp" data-string="WhatsApp" groups="base.group_system">
                        <block title="WhatsApp Configuration">
                            <setting>
                                <label for="whatsapp_api_url"/>
                                <div class="o_field_widget">
                                    <field name="whatsapp_api_url" placeholder="https://your-whatsapp-api-url.com"/>
                                </div>
                            </setting>
                            <setting>
                                <label for="token"/>
                                <div class="o_field_widget">
                                    <field name="token" password="True"/>
                                </div>
                            </setting>
                            <setting>
                                <label for="authentication_user"/>
                                <div class="o_field_widget">
                                    <field name="authentication_user"/>
                                </div>
                            </setting>
                            <setting>
                                <label for="authentication_password"/>
                                <div class="o_field_widget">
                                    <field name="authentication_password" password="True"/>
                                </div>
                            </setting>
                            <setting>
                                <label for="whatsapp_number"/>
                                <div class="o_field_widget">
                                    <field name="whatsapp_number" widget="phone"/>
                                </div>
                            </setting>
                            <setting>
                                <label for="webhook_url"/>
                                <div class="o_field_widget">
                                    <field name="webhook_url" widget="url"/>
                                </div>
                            </setting>
                            <setting>
                                <label for="provider"/>
                                <div class="o_field_widget">
                                    <field name="provider" widget="selection"/>
                                </div>
                            </setting>
                            <setting>
                                <label for="active"/>
                                <div class="o_field_widget">
                                    <field name="active"/>
                                </div>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
